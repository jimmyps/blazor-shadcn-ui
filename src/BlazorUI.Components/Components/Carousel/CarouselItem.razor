@namespace BlazorUI.Components.Carousel
@using BlazorUI.Components.Utilities

@* CarouselItem - Individual slide in a carousel *@

<div class="@GetItemClass()" data-carousel-item="true">
    @ChildContent
</div>

@code {
    [CascadingParameter]
    private Carousel? ParentCarousel { get; set; }

    /// <summary>
    /// The content of the carousel item.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes for the item.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>
    /// Additional HTML attributes.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string GetItemClass()
    {
        var slidesPerView = ParentCarousel?.SlidesPerView ?? 1;
        var basisPercent = 100.0 / slidesPerView;

        var basisClass = slidesPerView == 1
            ? "basis-full"
            : $"basis-[{basisPercent}%]";
        
        return ClassNames.cn(
            // Flex sizing
            "flex-shrink-0 flex-grow-0",
            basisClass,
            Class
        );
    }
}
