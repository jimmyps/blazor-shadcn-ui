@inherits MotionPresetBase
@namespace BlazorUI.Components.Motion

@*
    ExpandOnScroll Preset - Scale up when element enters viewport
    Use with Trigger="MotionTrigger.OnInView"
*@

@code {
    /// <summary>
    /// Starting scale (0-1). Default: 0.8
    /// </summary>
    [Parameter]
    public double From { get; set; } = 0.8;

    /// <summary>
    /// Ending scale (0-1+). Default: 1
    /// </summary>
    [Parameter]
    public double To { get; set; } = 1;

    /// <summary>
    /// Duration in seconds. Default: 0.6
    /// </summary>
    [Parameter]
    public double Duration { get; set; } = 0.6;

    public override List<MotionKeyframe> GetKeyframes()
    {
        return new List<MotionKeyframe>
        {
            new MotionKeyframe { Scale = From, Opacity = 0 },
            new MotionKeyframe { Scale = To, Opacity = 1 }
        };
    }

    public override MotionOptions? GetOptions()
    {
        return new MotionOptions
        {
            Duration = Duration,
            Easing = MotionEasing.EaseOut
        };
    }
}
