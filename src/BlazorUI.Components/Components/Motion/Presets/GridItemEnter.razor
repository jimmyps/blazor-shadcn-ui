@inherits MotionPresetBase
@namespace BlazorUI.Components.Motion

@*
    GridItemEnter Preset - Entry animation for grid items
    Optimized for grid layouts with scale and fade
*@

@code {
    /// <summary>
    /// Duration in seconds. Default: 0.4
    /// </summary>
    [Parameter]
    public double Duration { get; set; } = 0.4;

    public override List<MotionKeyframe> GetKeyframes()
    {
        return new List<MotionKeyframe>
        {
            new MotionKeyframe 
            { 
                Opacity = 0,
                Scale = 0.8
            },
            new MotionKeyframe 
            { 
                Opacity = 1,
                Scale = 1
            }
        };
    }

    public override MotionOptions? GetOptions()
    {
        var options = new MotionOptions
        {
            Duration = Duration
        };
        
        ApplyEasing(options, MotionEasing.EaseOut);
        
        return options;
    }
}
