@inherits MotionPresetBase
@namespace BlazorUI.Components.Motion

@*
    ListItemEnter Preset - Smooth entry for list items
    Combines fade, slide, and scale for polished list animations
*@

@code {
    /// <summary>
    /// Duration in seconds. Default: 0.3
    /// </summary>
    [Parameter]
    public double Duration { get; set; } = 0.3;

    public override List<MotionKeyframe> GetKeyframes()
    {
        return new List<MotionKeyframe>
        {
            new MotionKeyframe 
            { 
                Opacity = 0,
                Y = "20px",
                Scale = 0.95
            },
            new MotionKeyframe 
            { 
                Opacity = 1,
                Y = "0",
                Scale = 1
            }
        };
    }

    public override MotionOptions? GetOptions()
    {
        return new MotionOptions
        {
            Duration = Duration,
            Easing = MotionEasing.EaseOut
        };
    }
}
