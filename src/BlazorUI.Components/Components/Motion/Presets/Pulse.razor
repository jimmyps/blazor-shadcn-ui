@inherits MotionPresetBase
@namespace BlazorUI.Components.Motion

@*
    Pulse Preset - Pulsing scale animation
*@

@code {
    /// <summary>
    /// Scale amplitude. Default: 1.05
    /// </summary>
    [Parameter]
    public double Scale { get; set; } = 1.05;

    /// <summary>
    /// Duration in seconds. Default: 0.6
    /// </summary>
    [Parameter]
    public double Duration { get; set; } = 0.6;

    /// <summary>
    /// Number of pulses. Default: infinite
    /// </summary>
    [Parameter]
    public double Repeat { get; set; } = -1;

    public override List<MotionKeyframe> GetKeyframes()
    {
        return new List<MotionKeyframe>
        {
            new MotionKeyframe { Scale = 1 },
            new MotionKeyframe { Scale = Scale },
            new MotionKeyframe { Scale = 1 }
        };
    }

    public override MotionOptions? GetOptions()
    {
        var options = new MotionOptions
        {
            Duration = Duration,
            Repeat = Repeat
        };
        
        ApplyEasing(options, MotionEasing.EaseInOut);
        
        return options;
    }
}
