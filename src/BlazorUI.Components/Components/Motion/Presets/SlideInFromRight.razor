@inherits MotionPresetBase
@namespace BlazorUI.Components.Motion

@*
    SlideInFromRight Preset - Slide element in from right
*@

@code {
    /// <summary>
    /// Distance to slide from in pixels. Default: 100
    /// </summary>
    [Parameter]
    public double From { get; set; } = 100;

    /// <summary>
    /// Duration in seconds. Default: 0.3
    /// </summary>
    [Parameter]
    public double Duration { get; set; } = 0.3;

    public override List<MotionKeyframe> GetKeyframes()
    {
        return new List<MotionKeyframe>
        {
            new MotionKeyframe { X = $"{From}px", Opacity = 0 },
            new MotionKeyframe { X = "0px", Opacity = 1 }
        };
    }

    public override MotionOptions? GetOptions()
    {
        var options = new MotionOptions
        {
            Duration = Duration
        };
        
        ApplyEasing(options, MotionEasing.EaseOut);
        
        return options;
    }
}
