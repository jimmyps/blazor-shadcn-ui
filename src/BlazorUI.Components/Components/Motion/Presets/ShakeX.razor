@inherits MotionPresetBase
@namespace BlazorUI.Components.Motion

@*
    ShakeX Preset - Horizontal shake animation (useful for errors)
*@

@code {
    /// <summary>
    /// Shake intensity (pixels). Default: 10
    /// </summary>
    [Parameter]
    public int Intensity { get; set; } = 10;

    /// <summary>
    /// Duration in seconds. Default: 0.4
    /// </summary>
    [Parameter]
    public double Duration { get; set; } = 0.4;

    public override List<MotionKeyframe> GetKeyframes()
    {
        return new List<MotionKeyframe>
        {
            new MotionKeyframe { X = "0" },
            new MotionKeyframe { X = $"-{Intensity}px" },
            new MotionKeyframe { X = $"{Intensity}px" },
            new MotionKeyframe { X = $"-{Intensity}px" },
            new MotionKeyframe { X = $"{Intensity}px" },
            new MotionKeyframe { X = "0" }
        };
    }

    public override MotionOptions? GetOptions()
    {
        return new MotionOptions
        {
            Duration = Duration,
            Easing = MotionEasing.Linear
        };
    }
}
