@namespace BlazorUI.Components.ContextMenu
@typeparam TValue

@* ContextMenuRadioItem - styled radio item *@
<BlazorUI.Primitives.ContextMenu.ContextMenuRadioItem TValue="TValue"
                                                      Disabled="@Disabled"
                                                      Value="@Value"
                                                      CloseOnSelect="@CloseOnSelect"
                                                      class="@GetClass()"
                                                      @attributes="AdditionalAttributes">
    <span class="absolute left-2 flex h-3.5 w-3.5 items-center justify-center">
        @if (IsSelectedInternal)
        {
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="8"
                 height="8"
                 viewBox="0 0 8 8"
                 fill="currentColor">
                <circle cx="4" cy="4" r="4" />
            </svg>
        }
    </span>
    <span>@ChildContent</span>
</BlazorUI.Primitives.ContextMenu.ContextMenuRadioItem>

@code {
    [CascadingParameter]
    private BlazorUI.Primitives.ContextMenu.ContextMenuRadioGroupContext<TValue>? RadioGroupContext { get; set; }

    /// <summary>
    /// The content to display inside the radio item.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Whether the radio item is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; } = false;

    /// <summary>
    /// The value associated with this radio item.
    /// </summary>
    [Parameter]
    public TValue? Value { get; set; }

    /// <summary>
    /// Whether to close the context menu when this item is selected.
    /// Default is true for radio items.
    /// </summary>
    [Parameter]
    public bool CloseOnSelect { get; set; } = true;

    /// <summary>
    /// Additional CSS classes to apply.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>
    /// Additional attributes to apply.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private bool IsSelectedInternal => RadioGroupContext != null &&
                                       EqualityComparer<TValue?>.Default.Equals(RadioGroupContext.Value, Value);

    private string GetClass()
    {
        var baseClass = "relative flex cursor-default select-none items-center rounded-sm py-1.5 pl-8 pr-2 text-sm outline-none transition-colors " +
                       "focus:bg-accent focus:text-accent-foreground " +
                       "data-[disabled]:pointer-events-none data-[disabled]:opacity-50";

        if (!Disabled)
        {
            baseClass += " hover:bg-accent hover:text-accent-foreground";
        }

        return string.IsNullOrEmpty(Class) ? baseClass : $"{baseClass} {Class}";
    }
}
