@namespace BlazorUI.Components.ContextMenu
@implements IDisposable

<div @ref="_itemRef"
     role="menuitem"
     class="@CssClass"
     tabindex="-1"
     data-focused="@IsFocused.ToString().ToLower()"
     @onclick="HandleClick"
     @onclick:stopPropagation="true"
     @onkeydown="HandleKeyDown"
     @onkeydown:preventDefault="true">
    @ChildContent
</div>

@code {
    [CascadingParameter]
    public ContextMenu? Context { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public bool Inset { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }

    private ElementReference _itemRef;

    public bool IsDisabled => Disabled;

    private bool IsFocused => Context != null &&
                              Context.FocusedIndex >= 0 &&
                              Context.GetMenuItems().IndexOf(this) == Context.FocusedIndex;

    protected override void OnInitialized()
    {
        Context?.RegisterMenuItem(this);
    }

    public async Task FocusAsync()
    {
        try
        {
            await _itemRef.FocusAsync();
        }
        catch
        {
            // Ignore focus errors (element might not be mounted yet)
        }
    }

    private async Task HandleClick()
    {
        if (!Disabled)
        {
            await OnClick.InvokeAsync();
            if (Context != null)
            {
                await Context.Close();
            }
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (Disabled) return;

        if (e.Key == "Enter" || e.Key == " ")
        {
            await HandleClick();
        }
    }

    public void Dispose()
    {
        Context?.UnregisterMenuItem(this);
    }

    private string CssClass => BlazorUI.Components.Utilities.ClassNames.cn(
        "relative flex cursor-default select-none items-center rounded-sm px-2 py-1.5 text-sm outline-none",
        "hover:bg-accent hover:text-accent-foreground focus:bg-accent focus:text-accent-foreground",
        Disabled ? "pointer-events-none opacity-50" : null,
        Inset ? "pl-8" : null,
        Class
    );
}
