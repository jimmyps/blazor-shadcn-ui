@namespace BlazorUI.Components.CurrencyInput
@typeparam TValue

<input id="@EffectiveId"
name="@EffectiveName"
type="text"
inputmode="decimal"
class="@CssClass"
value="@CurrentValueAsString"
placeholder="@Placeholder"
disabled="@Disabled"
required="@Required"
readonly="@Readonly"
maxlength="@MaxLength"
autofocus="@Autofocus"
aria-label="@AriaLabel"
aria-describedby="@AriaDescribedBy"
aria-invalid="@(EffectiveAriaInvalid?.ToString().ToLower())"
@onfocus="HandleFocus"
@onblur="HandleBlur"
@attributes="AdditionalAttributes" />

