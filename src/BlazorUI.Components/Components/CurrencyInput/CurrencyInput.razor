@namespace BlazorUI.Components.CurrencyInput
@typeparam TValue

<input @ref="_inputElement"
    id="@Id"
    name="@EffectiveName"
    type="text"
    inputmode="decimal"
    class="@CssClass"
    value="@CurrentValueAsString"
    placeholder="@Placeholder"
    disabled="@Disabled"
    required="@Required"
    readonly="@Readonly"
    autofocus="@Autofocus"
    aria-label="@AriaLabel"
    aria-describedby="@AriaDescribedBy"
    aria-invalid="@(EffectiveAriaInvalid?.ToString().ToLower())"
    @onfocus="HandleFocus"
    @onblur="HandleBlur"
    @attributes="AdditionalAttributes" />
