@namespace BlazorUI.Components.Accordion
@using BlazorUI.Components.Utilities
@using BlazorUI.Primitives.Accordion

@*
    Styled AccordionItem component.
    Wraps the AccordionItem primitive with shadcn/ui styling.
*@

<BlazorUI.Primitives.Accordion.AccordionItem Value="@Value"
                                                   Disabled="@Disabled"
                                                   class="@CssClass">
    @ChildContent
</BlazorUI.Primitives.Accordion.AccordionItem>

@code {
    /// <summary>
    /// The value that uniquely identifies this accordion item.
    /// </summary>
    [Parameter, EditorRequired]
    public string Value { get; set; } = string.Empty;

    /// <summary>
    /// Whether this accordion item is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; }

    /// <summary>
    /// The child content to render within the accordion item.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the accordion item.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    private string CssClass =>
        ClassNames.cn("border-b", Class);
}
