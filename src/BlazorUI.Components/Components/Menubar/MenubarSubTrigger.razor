@namespace BlazorUI.Components.Menubar
@using BlazorUI.Components.Utilities
@using BlazorUI.Primitives.Menubar

@* Styled MenubarSubTrigger - wrapper with shadcn Tailwind classes *@
<BlazorUI.Primitives.Menubar.MenubarSubTrigger class="@CssClass"
                                                 Disabled="@Disabled">
    @ChildContent
    <svg xmlns="http://www.w3.org/2000/svg"
         width="16"
         height="16"
         viewBox="0 0 24 24"
         fill="none"
         stroke="currentColor"
         stroke-width="2"
         stroke-linecap="round"
         stroke-linejoin="round"
         class="ml-auto h-4 w-4">
        <polyline points="9 18 15 12 9 6"></polyline>
    </svg>
</BlazorUI.Primitives.Menubar.MenubarSubTrigger>

@code {
    /// <summary>
    /// The content to display inside the trigger.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the trigger.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>
    /// Whether the trigger is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; } = false;

    /// <summary>
    /// Whether this trigger is an inset item (has additional left padding).
    /// </summary>
    [Parameter]
    public bool Inset { get; set; } = false;

    private string CssClass => ClassNames.cn(
        "flex cursor-default select-none items-center rounded-sm px-2 py-1.5 text-sm outline-none",
        "focus:bg-accent focus:text-accent-foreground",
        "data-[state=open]:bg-accent",
        "data-[disabled=true]:pointer-events-none data-[disabled=true]:opacity-50",
        Inset ? "pl-8" : null,
        !Disabled ? "hover:bg-accent hover:text-accent-foreground" : null,
        Class);
}
