@namespace BlazorUI.Components.Menubar
@using BlazorUI.Components.Utilities
@typeparam TValue

@* Styled MenubarRadioItem - wrapper with shadcn Tailwind classes *@
<BlazorUI.Primitives.Menubar.MenubarRadioItem TValue="TValue"
                                               class="@CssClass"
                                               Disabled="@Disabled"
                                               Value="@Value"
                                               CloseOnSelect="@CloseOnSelect">
    <span class="absolute left-2 flex h-3.5 w-3.5 items-center justify-center">
        @if (IsSelectedInternal)
        {
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="8"
                 height="8"
                 viewBox="0 0 8 8"
                 fill="currentColor">
                <circle cx="4" cy="4" r="4" />
            </svg>
        }
    </span>
    <span>@ChildContent</span>
</BlazorUI.Primitives.Menubar.MenubarRadioItem>

@code {
    [CascadingParameter]
    private BlazorUI.Primitives.Menubar.MenubarRadioGroupContext<TValue>? RadioGroupContext { get; set; }

    /// <summary>
    /// The content to display inside the radio item.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the radio item.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>
    /// Whether the radio item is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; } = false;

    /// <summary>
    /// The value associated with this radio item.
    /// </summary>
    [Parameter]
    public TValue? Value { get; set; }

    /// <summary>
    /// Whether to close the menu when this item is selected.
    /// Default is true for radio items.
    /// </summary>
    [Parameter]
    public bool CloseOnSelect { get; set; } = true;

    private bool IsSelectedInternal => RadioGroupContext != null &&
                                       EqualityComparer<TValue?>.Default.Equals(RadioGroupContext.Value, Value);

    private string CssClass => ClassNames.cn(
        "relative flex cursor-default select-none items-center rounded-sm py-1.5 pl-8 pr-2 text-sm outline-none",
        "focus:bg-accent focus:text-accent-foreground",
        "data-[disabled=true]:pointer-events-none data-[disabled=true]:opacity-50",
        !Disabled ? "hover:bg-accent hover:text-accent-foreground" : null,
        Class);
}
