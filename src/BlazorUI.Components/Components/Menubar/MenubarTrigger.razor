@namespace BlazorUI.Components.Menubar
@using BlazorUI.Components.Utilities
@using BlazorUI.Primitives.Menubar

@* Styled MenubarTrigger - wrapper with shadcn Tailwind classes *@
<BlazorUI.Primitives.Menubar.MenubarTrigger class="@CssClass"
                                              Disabled="@Disabled">
    @ChildContent
</BlazorUI.Primitives.Menubar.MenubarTrigger>

@code {
    /// <summary>
    /// The content to display inside the trigger button.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the trigger.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>
    /// Whether the trigger is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; } = false;

    private string CssClass => ClassNames.cn(
        "flex cursor-default select-none items-center rounded-sm px-3 py-1.5 text-sm font-medium outline-none",
        "focus:bg-accent focus:text-accent-foreground",
        "data-[state=open]:bg-accent data-[state=open]:text-accent-foreground",
        Class);
}
