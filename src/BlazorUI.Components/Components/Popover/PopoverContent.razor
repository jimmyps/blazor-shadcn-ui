@using BlazorUI.Primitives.Services
@namespace BlazorUI.Components.Popover
@using BlazorUI.Components.Utilities
@using BlazorUI.Primitives.Popover

@* Styled PopoverContent with shadcn/ui classes *@

<BlazorUI.Primitives.Popover.PopoverContent CloseOnEscape="@CloseOnEscape"
                                                   CloseOnClickOutside="@CloseOnClickOutside"
                                                   ForceMount="@ForceMount"
                                                   Side="@Side"
                                                   Align="@Align"
                                                   Offset="@Offset"
                                                   MatchTriggerWidth="@MatchTriggerWidth"
                                                   Strategy="@Strategy.ToValue()"
                                                   ZIndex="@ZIndex"
                                                   OnEscapeKeyDown="@OnEscapeKeyDown"
                                                   OnClickOutside="@OnClickOutside"
                                                   OnContentReady="@OnContentReady"
                                                   class="@CssClass"
                                                   @attributes="AdditionalAttributes">
    @ChildContent
</BlazorUI.Primitives.Popover.PopoverContent>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Whether to keep the portal mounted when the popover is closed.
    /// Default is <c>true</c> â€” JS toggles visibility, preserving JS handlers and enabling CSS exit animations.
    /// Set to <c>false</c> to fully unmount the portal on close (lower DOM footprint).
    /// </summary>
    [Parameter]
    public bool ForceMount { get; set; } = true;

    [Parameter]
    public bool CloseOnEscape { get; set; } = true;

    [Parameter]
    public bool CloseOnClickOutside { get; set; } = true;

    [Parameter]
    public PopoverSide Side { get; set; } = PopoverSide.Bottom;

    [Parameter]
    public PopoverAlign Align { get; set; } = PopoverAlign.Center;

    [Parameter]
    public int Offset { get; set; } = 4;

    [Parameter]
    public bool MatchTriggerWidth { get; set; } = false;

    /// <summary>
    /// Positioning strategy: "absolute" or "fixed".
    /// Use "fixed" when popover needs to escape stacking contexts (e.g., in sidebars).
    /// Default is "absolute".
    /// </summary>
    [Parameter]
    public PositioningStrategy Strategy { get; set; } = PositioningStrategy.Absolute;

    /// <summary>
    /// Z-index for the popover content.
    /// Default is 60 (PopoverContent level).
    /// </summary>
    [Parameter]
    public int ZIndex { get; set; } = ZIndexLevels.PopoverContent;

    [Parameter]
    public EventCallback<KeyboardEventArgs> OnEscapeKeyDown { get; set; }

    [Parameter]
    public EventCallback OnClickOutside { get; set; }

    /// <summary>
    /// Event callback invoked when the popover content is fully ready (positioned and visible).
    /// Useful for focus management.
    /// </summary>
    [Parameter]
    public EventCallback OnContentReady { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string CssClass => ClassNames.cn(
        $"z-{ZIndex}",
        MatchTriggerWidth ? "w-full" : "w-72",
        "rounded-md border bg-popover p-4 text-popover-foreground shadow-md outline-none",
        "data-[state=open]:animate-in data-[state=closed]:animate-out",
        "data-[state=closed]:fade-out-0 data-[state=open]:fade-in-0",
        "data-[state=closed]:zoom-out-95 data-[state=open]:zoom-in-95",
        "data-[side=bottom]:slide-in-from-top-2 data-[side=left]:slide-in-from-right-2",
        "data-[side=right]:slide-in-from-left-2 data-[side=top]:slide-in-from-bottom-2",
        Class);
}
