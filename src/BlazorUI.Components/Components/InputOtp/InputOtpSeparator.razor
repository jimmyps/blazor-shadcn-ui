@namespace BlazorUI.Components.InputOtp

@* InputOtpSeparator - visual separator between OTP slot groups *@
<div role="separator" class="@CssClass">
    @if (ChildContent != null)
    {
        @ChildContent
    }
    else
    {
        @* Default: Minus icon similar to shadcn/ui OTP separator *@
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-minus"
            aria-hidden="true">
            <path d="M5 12h14"/>
        </svg>
    }
</div>

@code {
    /// <summary>
    /// Optional custom content for the separator.
    /// If not provided, displays a minus/dash icon.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the separator.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    private string CssClass
    {
        get
        {
            var baseClasses = "flex items-center justify-center text-muted-foreground";
            return string.IsNullOrWhiteSpace(Class) ? baseClasses : $"{baseClasses} {Class}";
        }
    }
}
