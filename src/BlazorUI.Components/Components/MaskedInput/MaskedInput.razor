@namespace BlazorUI.Components.MaskedInput

<input
    @ref="inputElement"
    id="@Id"
    name="@EffectiveName"
    type="text"
    class="@CssClass"
    value="@CurrentDisplayValue"
    placeholder="@EffectivePlaceholder"
    disabled="@Disabled"
    required="@Required"
    readonly="@Readonly"
    inputmode="@InputMode"
    autofocus="@Autofocus"
    aria-label="@AriaLabel"
    aria-describedby="@AriaDescribedBy"
    aria-invalid="@(EffectiveAriaInvalid?.ToString().ToLower())"
    @attributes="AdditionalAttributes"
    @oninput="HandleInput"
    @onkeydown="HandleKeyDown"
    @onpaste="HandlePaste" />
