@namespace BlazorUI.Components.NumericInput
@typeparam TValue

<input id="@EffectiveId"
    name="@EffectiveName"
    type="number"
    class="@CssClass"
    value="@CurrentValueAsString"
    placeholder="@Placeholder"
    disabled="@Disabled"
    required="@Required"
    readonly="@Readonly"
    min="@Min"
    max="@Max"
    step="@Step"
    inputmode="@InputMode"
    autofocus="@Autofocus"
    aria-label="@AriaLabel"
    aria-describedby="@AriaDescribedBy"
    aria-invalid="@(EffectiveAriaInvalid?.ToString().ToLower())"
    @attributes="AdditionalAttributes" />

