        switch (args.Key)
        {
            case "ArrowRight":
                _preventKeyDefault = true;
                await FocusTriggerAtOffset(1);
                break;
            case "ArrowLeft":
                _preventKeyDefault = true;
                await FocusTriggerAtOffset(-1);
                break;
            case "ArrowDown":
