@namespace BlazorUI.Components.AlertDialog
@using BlazorUI.Primitives.Dialog

@*
    AlertDialog action button - performs the action and closes the dialog.
*@

<DialogClose AsChild="@AsChild">
    @ChildContent
</DialogClose>

@code {
    /// <summary>
    /// The content to render as the action button.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// When true, the button will be rendered as a child element.
    /// </summary>
    [Parameter]
    public bool AsChild { get; set; }
}
