@namespace BlazorUI.Components.AlertDialog
@using BlazorUI.Primitives.Dialog

@*
    AlertDialog trigger button.
*@

<DialogTrigger AsChild="@AsChild">
    @ChildContent
</DialogTrigger>

@code {
    /// <summary>
    /// The content to render as the trigger.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// When true, the trigger will be rendered as a child element instead of a button.
    /// </summary>
    [Parameter]
    public bool AsChild { get; set; }
}
