@typeparam TValue
@namespace BlazorUI.Components.RadioGroup
@using BlazorUI.Primitives.RadioGroup

<BlazorUI.Primitives.RadioGroup.RadioGroup TValue="TValue"
    Value="@Value"
    ValueChanged="@HandleValueChanged"
    Disabled="@Disabled"
    Name="@Name"
    Required="@Required"
    AriaLabel="@AriaLabel"
    class="@CssClass"
    aria-invalid="@(IsInvalid ? "true" : null)">
    @ChildContent
</BlazorUI.Primitives.RadioGroup.RadioGroup>
