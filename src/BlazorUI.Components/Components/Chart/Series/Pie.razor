@namespace BlazorUI.Components.Chart

<CascadingValue Value="this" IsFixed="true">
    @ChildContent
</CascadingValue>

@code {
    [CascadingParameter] private dynamic? Parent { get; set; }
    
    /// <summary>
    /// Gets or sets the data key for values.
    /// </summary>
    [Parameter, EditorRequired]
    public string DataKey { get; set; } = string.Empty;
    
    /// <summary>
    /// Gets or sets the key for slice names.
    /// </summary>
    [Parameter, EditorRequired]
    public string NameKey { get; set; } = string.Empty;
    
    /// <summary>
    /// Gets or sets the inner radius for donut charts (e.g., "60" or "60%").
    /// </summary>
    [Parameter]
    public string? InnerRadius { get; set; }
    
    /// <summary>
    /// Gets or sets the series name.
    /// </summary>
    [Parameter]
    public string? Name { get; set; }
    
    /// <summary>
    /// Gets or sets the default color (for auto palette override).
    /// </summary>
    [Parameter]
    public string? Color { get; set; }
    
    /// <summary>
    /// Gets or sets whether to show labels.
    /// </summary>
    [Parameter]
    public bool ShowLabel { get; set; } = false;
    
    /// <summary>
    /// Gets or sets the label position.
    /// </summary>
    [Parameter]
    public LabelPosition? LabelPosition { get; set; }
    
    /// <summary>
    /// Gets or sets the label formatter.
    /// </summary>
    [Parameter]
    public string? LabelFormatter { get; set; }
    
    /// <summary>
    /// Gets or sets whether to show label lines.
    /// </summary>
    [Parameter]
    public bool ShowLabelLine { get; set; } = false;
    
    /// <summary>
    /// Gets or sets the child content (LabelList and LabelLine).
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    /// <summary>
    /// Gets the registered LabelList component.
    /// </summary>
    public LabelList? LabelList { get; private set; }
    
    /// <summary>
    /// Gets the registered LabelLine component.
    /// </summary>
    public LabelLine? LabelLine { get; private set; }
    
    /// <summary>
    /// Registers a LabelList component.
    /// </summary>
    public void RegisterLabelList(LabelList labelList)
    {
        LabelList = labelList;
    }
    
    /// <summary>
    /// Registers a LabelLine component.
    /// </summary>
    public void RegisterLabelLine(LabelLine labelLine)
    {
        LabelLine = labelLine;
    }
    
    protected override void OnInitialized()
    {
        if (Parent != null)
        {
            try { Parent.RegisterPie(this); } catch { }
        }
    }
}
