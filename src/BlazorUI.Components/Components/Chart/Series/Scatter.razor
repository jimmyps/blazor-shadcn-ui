@namespace BlazorUI.Components.Chart
@using BlazorUI.Components.Chart.Series
@inherits SeriesBase

<CascadingValue Value="this" IsFixed="true">
    @ChildContent
</CascadingValue>

@code {
    [CascadingParameter] private dynamic? Parent { get; set; }
    
    /// <summary>
    /// Gets or sets the marker color (legacy, use Fill instead).
    /// Note: Scatter uses XAxis.DataKey and YAxis.DataKey for X/Y coordinates.
    /// </summary>
    [Parameter]
    public string? Color { get; set; }
    
    /// <summary>
    /// Gets or sets the size of scatter symbols in pixels.
    /// Maps to series.symbolSize.
    /// </summary>
    [Parameter]
    public int SymbolSize { get; set; } = 10;
    
    /// <summary>
    /// Gets or sets the shape of scatter symbols.
    /// Maps to series.symbol.
    /// </summary>
    [Parameter]
    public SymbolShape Symbol { get; set; } = SymbolShape.Circle;
    
    /// <summary>
    /// Gets or sets whether emphasis is enabled.
    /// </summary>
    [Parameter]
    public bool Emphasis { get; set; } = false;
    
    /// <summary>
    /// Gets or sets the focus behavior.
    /// </summary>
    [Parameter]
    public Focus Focus { get; set; } = Focus.None;
    
    protected override void OnInitialized()
    {
        if (Parent != null)
        {
            try { Parent.RegisterScatter(this); } catch { }
        }
    }
}
