@namespace BlazorUI.Components.Chart

<CascadingValue Value="this" IsFixed="true">
    @ChildContent
</CascadingValue>

@code {
    [CascadingParameter] private dynamic? Parent { get; set; }
    
    /// <summary>
    /// Gets or sets the series name (for legend).
    /// Scatter uses XAxis.DataKey and YAxis.DataKey for X/Y coordinates.
    /// </summary>
    [Parameter]
    public string? Name { get; set; }
    
    /// <summary>
    /// Gets or sets the marker color.
    /// </summary>
    [Parameter]
    public string? Color { get; set; }
    
    /// <summary>
    /// Gets or sets the size of scatter symbols in pixels.
    /// Maps to series.symbolSize.
    /// </summary>
    [Parameter]
    public int SymbolSize { get; set; } = 10;
    
    /// <summary>
    /// Gets or sets the shape of scatter symbols.
    /// Maps to series.symbol.
    /// </summary>
    [Parameter]
    public SymbolShape Symbol { get; set; } = SymbolShape.Circle;
    
    /// <summary>
    /// Gets or sets whether emphasis is enabled.
    /// </summary>
    [Parameter]
    public bool Emphasis { get; set; } = false;
    
    /// <summary>
    /// Gets or sets the focus behavior.
    /// </summary>
    [Parameter]
    public Focus Focus { get; set; } = Focus.None;
    
    /// <summary>
    /// Gets or sets whether to show labels.
    /// </summary>
    [Parameter]
    public bool ShowLabel { get; set; } = false;
    
    /// <summary>
    /// Gets or sets the label position.
    /// </summary>
    [Parameter]
    public LabelPosition? LabelPosition { get; set; }
    
    /// <summary>
    /// Gets or sets the label formatter.
    /// </summary>
    [Parameter]
    public string? LabelFormatter { get; set; }
    
    /// <summary>
    /// Gets or sets the child content (LabelList).
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    /// <summary>
    /// Gets the registered LabelList component.
    /// </summary>
    public LabelList? LabelList { get; private set; }
    
    /// <summary>
    /// Registers a LabelList component.
    /// </summary>
    public void RegisterLabelList(LabelList labelList)
    {
        LabelList = labelList;
    }
    
    protected override void OnInitialized()
    {
        if (Parent != null)
        {
            try { Parent.RegisterScatter(this); } catch { }
        }
    }
}
