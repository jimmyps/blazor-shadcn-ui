@namespace BlazorUI.Components.Chart

<CascadingValue Value="this" IsFixed="true">
    @ChildContent
</CascadingValue>

@code {
    [CascadingParameter] private dynamic? Parent { get; set; }
    
    /// <summary>
    /// Gets or sets the data key for the series.
    /// </summary>
    [Parameter, EditorRequired]
    public string DataKey { get; set; } = string.Empty;
    
    /// <summary>
    /// Gets or sets the series name (for legend).
    /// </summary>
    [Parameter]
    public string? Name { get; set; }
    
    /// <summary>
    /// Gets or sets the area color.
    /// </summary>
    [Parameter]
    public string? Color { get; set; }
    
    /// <summary>
    /// Gets or sets whether emphasis is enabled.
    /// </summary>
    [Parameter]
    public bool Emphasis { get; set; } = false;
    
    /// <summary>
    /// Gets or sets the focus behavior.
    /// </summary>
    [Parameter]
    public Focus Focus { get; set; } = Focus.None;
    
    /// <summary>
    /// Gets or sets whether to show dots at data points.
    /// </summary>
    [Parameter]
    public bool ShowDots { get; set; } = false;
    
    /// <summary>
    /// Gets or sets the line width in pixels.
    /// </summary>
    [Parameter]
    public int LineWidth { get; set; } = 2;
    
    /// <summary>
    /// Gets or sets the stack group ID for stacked areas.
    /// </summary>
    [Parameter]
    public string? StackId { get; set; }
    
    /// <summary>
    /// Gets or sets the interpolation type for the area.
    /// </summary>
    [Parameter]
    public InterpolationType Interpolation { get; set; } = InterpolationType.Natural;
    
    /// <summary>
    /// Gets or sets whether to show labels on data points.
    /// </summary>
    [Parameter]
    public bool ShowLabel { get; set; } = false;
    
    /// <summary>
    /// Gets or sets the label position (used when ShowLabel is true and no LabelList child is provided).
    /// </summary>
    [Parameter]
    public LabelPosition? LabelPosition { get; set; }
    
    /// <summary>
    /// Gets or sets the label formatter (template string or JS function string).
    /// </summary>
    [Parameter]
    public string? LabelFormatter { get; set; }
    
    /// <summary>
    /// Gets or sets the child content (for Fill configuration and LabelList).
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    /// <summary>
    /// Gets the registered LabelList component.
    /// </summary>
    public LabelList? LabelList { get; private set; }
    
    /// <summary>
    /// Registers a LabelList component.
    /// </summary>
    public void RegisterLabelList(LabelList labelList)
    {
        LabelList = labelList;
    }
    
    protected override void OnInitialized()
    {
        if (Parent != null)
        {
            try { Parent.RegisterArea(this); } catch { }
        }
    }
}
