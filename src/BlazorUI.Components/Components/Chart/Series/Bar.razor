@namespace BlazorUI.Components.Chart

<CascadingValue Value="this" IsFixed="true">
    @ChildContent
</CascadingValue>

@code {
    [CascadingParameter] private dynamic? Parent { get; set; }
    
    /// <summary>
    /// Gets or sets the data key for the series.
    /// </summary>
    [Parameter, EditorRequired]
    public string DataKey { get; set; } = string.Empty;
    
    /// <summary>
    /// Gets or sets the series name (for legend).
    /// </summary>
    [Parameter]
    public string? Name { get; set; }
    
    /// <summary>
    /// Gets or sets the bar color.
    /// </summary>
    [Parameter]
    public string? Color { get; set; }
    
    /// <summary>
    /// Gets or sets whether emphasis is enabled.
    /// </summary>
    [Parameter]
    public bool Emphasis { get; set; } = false;
    
    /// <summary>
    /// Gets or sets the focus behavior.
    /// </summary>
    [Parameter]
    public Focus Focus { get; set; } = Focus.None;
    
    /// <summary>
    /// Gets or sets the stack group ID for stacked bars.
    /// </summary>
    [Parameter]
    public string? StackId { get; set; }
    
    /// <summary>
    /// Gets or sets the border radius for bar corners.
    /// </summary>
    [Parameter]
    public int? Radius { get; set; }
    
    /// <summary>
    /// Gets or sets the opacity for the bars (0.0 to 1.0).
    /// Maps to series.itemStyle.opacity.
    /// </summary>
    [Parameter]
    public double? Opacity { get; set; }
    
    /// <summary>
    /// Gets or sets whether to show labels on data points.
    /// </summary>
    [Parameter]
    public bool ShowLabel { get; set; } = false;
    
    /// <summary>
    /// Gets or sets the label position.
    /// </summary>
    [Parameter]
    public LabelPosition? LabelPosition { get; set; }
    
    /// <summary>
    /// Gets or sets the label formatter.
    /// </summary>
    [Parameter]
    public string? LabelFormatter { get; set; }
    
    /// <summary>
    /// Gets or sets the child content (LabelList).
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    /// <summary>
    /// Gets the registered LabelList component.
    /// </summary>
    public LabelList? LabelList { get; private set; }
    
    /// <summary>
    /// Registers a LabelList component.
    /// </summary>
    public void RegisterLabelList(LabelList labelList)
    {
        LabelList = labelList;
    }
    
    protected override void OnInitialized()
    {
        if (Parent != null)
        {
            try { Parent.RegisterBar(this); } catch { }
        }
    }
}
