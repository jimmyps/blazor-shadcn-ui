@namespace BlazorUI.Components.Chart

<h3 class="@CssClass">@ChildContent</h3>

@code {
    /// <summary>
    /// Gets or sets the content of the chart panel title.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    /// <summary>
    /// Gets or sets additional CSS classes to apply to the component.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }
    
    private string CssClass => BlazorUI.Components.Utilities.ClassNames.cn(
        "text-2xl font-semibold leading-none tracking-tight",
        Class
    );
}
