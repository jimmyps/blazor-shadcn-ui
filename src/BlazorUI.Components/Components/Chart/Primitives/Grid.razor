@namespace BlazorUI.Components.Chart

@code {
    [CascadingParameter] private dynamic? Parent { get; set; }
    
    /// <summary>
    /// Gets or sets whether to show grid lines.
    /// </summary>
    [Parameter]
    public bool Show { get; set; } = true;
    
    /// <summary>
    /// Gets or sets whether to show horizontal grid lines.
    /// </summary>
    [Parameter]
    public bool Horizontal { get; set; } = true;
    
    /// <summary>
    /// Gets or sets whether to show vertical grid lines.
    /// </summary>
    [Parameter]
    public bool Vertical { get; set; } = true;
    
    /// <summary>
    /// Gets or sets the stroke color for grid lines.
    /// </summary>
    [Parameter]
    public string? Stroke { get; set; }
    
    /// <summary>
    /// Gets or sets the stroke width for grid lines in pixels.
    /// Maps to grid line lineStyle.width.
    /// </summary>
    [Parameter]
    public int? StrokeWidth { get; set; }
    
    /// <summary>
    /// Gets or sets the stroke/line type for grid lines.
    /// Maps to grid line lineStyle.type.
    /// </summary>
    [Parameter]
    public LineStyleType StrokeType { get; set; } = LineStyleType.Solid;
    
    /// <summary>
    /// Gets or sets the opacity for grid lines (0.0 to 1.0).
    /// Maps to grid line lineStyle.opacity.
    /// </summary>
    [Parameter]
    public double? Opacity { get; set; }
    
    protected override void OnInitialized()
    {
        if (Parent != null)
        {
            try { Parent.RegisterGrid(this); } catch { }
        }
    }
}
