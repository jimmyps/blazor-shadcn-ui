@namespace BlazorUI.Components.Chart

<p class="@CssClass">@ChildContent</p>

@code {
    /// <summary>
    /// Gets or sets the content of the chart panel description.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    /// <summary>
    /// Gets or sets additional CSS classes to apply to the component.
    /// </summary>
    [Parameter]
    public string? Class { get; set; }
    
    private string CssClass => BlazorUI.Components.Utilities.ClassNames.cn(
        "text-sm text-muted-foreground",
        Class
    );
}
