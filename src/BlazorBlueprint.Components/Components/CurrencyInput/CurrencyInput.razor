@namespace BlazorBlueprint.Components.CurrencyInput
@implements IDisposable

<div class="@ContainerClass">
    @if (ShowSymbol && Currency.SymbolBefore)
    {
        <span class="@SymbolClass">@Currency.Symbol</span>
    }
    <input
        @ref="_inputRef"
        id="@Id"
        name="@EffectiveName"
        type="text"
        inputmode="decimal"
        class="@CssClass"
        value="@DisplayValue"
        placeholder="@Placeholder"
        disabled="@Disabled"
        required="@Required"
        aria-label="@(AriaLabel ?? $"Amount in {Currency.Name}")"
        aria-describedby="@AriaDescribedBy"
        aria-invalid="@EffectiveAriaInvalid"
        @oninput="HandleInput"
        @onblur="HandleBlur"
        @onfocus="HandleFocus"
        @onkeydown="HandleKeyDown" />
    @if (ShowSymbol && !Currency.SymbolBefore)
    {
        <span class="@SymbolClass">@Currency.Symbol</span>
    }
</div>
