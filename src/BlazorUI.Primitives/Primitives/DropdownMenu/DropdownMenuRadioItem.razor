@namespace BlazorUI.Primitives.DropdownMenu
@typeparam TValue
@implements IDropdownMenuItem
@implements IDisposable

@* DropdownMenuRadioItem - a radio item within a radio group *@
<div @ref="_itemRef"
     role="menuitemradio"
     tabindex="-1"
     aria-checked="@IsSelected.ToString().ToLower()"
     aria-disabled="@Disabled.ToString().ToLower()"
     @onclick="HandleClick"
     data-state="@(IsSelected ? "checked" : "unchecked")"
     data-disabled="@(Disabled ? "true" : null)"
     @attributes="AdditionalAttributes">
    @ChildContent
</div>

@code {
    [CascadingParameter]
    private DropdownMenuContext MenuContext { get; set; } = null!;

    [CascadingParameter]
    private DropdownMenuRadioGroupContext<TValue>? RadioGroupContext { get; set; }

    [CascadingParameter]
    private DropdownMenuContent? ContentContext { get; set; }

    private ElementReference _itemRef;

    /// <summary>
    /// The content to display inside the radio item.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional attributes to apply to the radio item element.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    /// <summary>
    /// Whether the radio item is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; } = false;

    /// <summary>
    /// The value associated with this radio item.
    /// </summary>
    [Parameter]
    public TValue? Value { get; set; }

    /// <summary>
    /// Whether to close the dropdown menu when this item is selected.
    /// Default is true for radio items.
    /// </summary>
    [Parameter]
    public bool CloseOnSelect { get; set; } = true;

    private bool IsSelected => RadioGroupContext != null &&
                               EqualityComparer<TValue?>.Default.Equals(RadioGroupContext.Value, Value);

    protected override void OnInitialized()
    {
        if (MenuContext == null)
        {
            throw new InvalidOperationException(
                "DropdownMenuRadioItem must be used within a DropdownMenu component.");
        }

        if (RadioGroupContext == null)
        {
            throw new InvalidOperationException(
                "DropdownMenuRadioItem must be used within a DropdownMenuRadioGroup component.");
        }

        // Register this item with the content for keyboard navigation
        ContentContext?.RegisterMenuItem(this);
    }

    private async Task HandleClick(MouseEventArgs args)
    {
        if (Disabled) return;

        // Select this item
        if (RadioGroupContext?.SelectValue != null)
        {
            await RadioGroupContext.SelectValue(Value);
        }

        // Close the dropdown menu if configured
        if (CloseOnSelect && MenuContext != null)
        {
            MenuContext.Close();
        }
    }

    // IDropdownMenuItem implementation
    public async Task FocusAsync()
    {
        try
        {
            await _itemRef.FocusAsync();
        }
        catch
        {
            // Ignore focus errors
        }
    }

    public async Task ClickAsync()
    {
        if (Disabled) return;
        await HandleClick(new MouseEventArgs());
    }

    public void Dispose()
    {
        ContentContext?.UnregisterMenuItem(this);
    }
}
