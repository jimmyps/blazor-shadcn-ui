@page "/components/navigation-menu"
@using BlazorBlueprint.Components.NavigationMenu
@using BlazorBlueprint.Components.ResponsiveNav
@using BlazorBlueprint.Components.Separator
@using BlazorBlueprint.Icons.Lucide.Components

<PageTitle>Navigation Menu Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Navigation Menu Component</h1>
            <p class="text-xl text-muted-foreground">
                A collection of links for navigating websites with dropdown support.
            </p>
        </div>
    </div>

    <!-- Responsive Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Responsive Navigation</h2>
            <p class="text-sm text-muted-foreground">
                Resize the browser window to see the navigation switch between desktop and mobile modes.
                On mobile (below 768px), a hamburger icon appears and the navigation moves to a slide-out sheet.
            </p>
        </div>
        <div class="border rounded-lg overflow-visible">
            <ResponsiveNavProvider>
                <header class="flex items-center justify-between p-4 bg-background rounded-lg">
                    <!-- Logo (always visible) -->
                    <a href="/" class="font-bold text-lg shrink-0">BlazorBlueprint</a>

                    <!-- Desktop navigation (hidden on mobile) -->
                    <NavigationMenu Class="hidden md:flex">
                        <NavigationMenuList>
                            <NavigationMenuItem Value="resp-getting-started">
                                <NavigationMenuTrigger>Getting started</NavigationMenuTrigger>
                                <NavigationMenuContent>
                                    <div class="grid gap-3 p-4 w-[400px]">
                                        <div class="p-3 rounded-lg hover:bg-accent">
                                            <a href="#" class="block font-medium mb-1">Introduction</a>
                                            <p class="text-sm text-muted-foreground">Re-usable components built using Blazor.</p>
                                        </div>
                                        <div class="p-3 rounded-lg hover:bg-accent">
                                            <a href="#" class="block font-medium mb-1">Installation</a>
                                            <p class="text-sm text-muted-foreground">How to install and get started.</p>
                                        </div>
                                    </div>
                                </NavigationMenuContent>
                            </NavigationMenuItem>
                            <NavigationMenuItem>
                                <NavigationMenuLink Href="/components">Components</NavigationMenuLink>
                            </NavigationMenuItem>
                            <NavigationMenuItem>
                                <NavigationMenuLink Href="/primitives">Primitives</NavigationMenuLink>
                            </NavigationMenuItem>
                        </NavigationMenuList>
                    </NavigationMenu>

                    <!-- Right side icons (always visible) -->
                    <div class="flex items-center gap-2">
                        <!-- Search button -->
                        <button type="button" class="inline-flex items-center justify-center rounded-md p-2 text-muted-foreground hover:bg-accent hover:text-accent-foreground">
                            <LucideIcon Name="search" Size="20" />
                            <span class="sr-only">Search</span>
                        </button>

                        <!-- Notifications bell -->
                        <button type="button" class="relative inline-flex items-center justify-center rounded-md p-2 text-muted-foreground hover:bg-accent hover:text-accent-foreground">
                            <LucideIcon Name="bell" Size="20" />
                            <span class="absolute top-1 right-1 h-2 w-2 rounded-full bg-red-500"></span>
                            <span class="sr-only">Notifications</span>
                        </button>

                        <!-- Sign In (desktop only) -->
                        <a href="#" class="hidden md:inline-flex text-sm text-muted-foreground hover:text-foreground px-2">Sign In</a>

                        <!-- Mobile hamburger (right-aligned) -->
                        <ResponsiveNavTrigger />
                    </div>
                </header>

                <ResponsiveNavContent>
                    <nav class="flex flex-col space-y-4">
                        <span class="text-sm font-medium text-muted-foreground">Getting started</span>
                        <div class="pl-4 space-y-2 border-l">
                            <a href="#" class="block text-sm hover:text-primary">Introduction</a>
                            <a href="#" class="block text-sm hover:text-primary">Installation</a>
                        </div>
                        <a href="/components" class="text-lg font-medium hover:text-primary">Components</a>
                        <a href="/primitives" class="text-lg font-medium hover:text-primary">Primitives</a>
                        <Separator />
                        <a href="#" class="text-sm text-muted-foreground hover:text-primary">Sign In</a>
                    </nav>
                </ResponsiveNavContent>
            </ResponsiveNavProvider>
        </div>
        <div class="border rounded-lg p-4 bg-muted/50">
            <p class="text-sm text-muted-foreground">
                <strong>Tip:</strong> Wrap your header with <code class="text-xs bg-background px-1 py-0.5 rounded">ResponsiveNavProvider</code>,
                add <code class="text-xs bg-background px-1 py-0.5 rounded">ResponsiveNavTrigger</code> for the hamburger menu,
                and use <code class="text-xs bg-background px-1 py-0.5 rounded">ResponsiveNavContent</code> for the mobile sheet content.
                Add <code class="text-xs bg-background px-1 py-0.5 rounded">Class="hidden md:flex"</code> to your NavigationMenu to hide it on mobile.
            </p>
        </div>
    </div>

    <!-- Basic Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Example</h2>
            <p class="text-sm text-muted-foreground">
                A navigation menu with dropdown items (desktop-only, no responsive behavior).
            </p>
        </div>
        <div class="border rounded-lg p-4">
            <NavigationMenu>
                <NavigationMenuList>
                    <NavigationMenuItem Value="getting-started">
                        <NavigationMenuTrigger>Getting started</NavigationMenuTrigger>
                        <NavigationMenuContent>
                            <div class="grid gap-3 p-4 w-[400px]">
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Introduction</a>
                                    <p class="text-sm text-muted-foreground">
                                        Re-usable components built using Blazor and Tailwind CSS.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Installation</a>
                                    <p class="text-sm text-muted-foreground">
                                        How to install dependencies and structure your app.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Typography</a>
                                    <p class="text-sm text-muted-foreground">
                                        Styles for headings, paragraphs, lists, and more.
                                    </p>
                                </div>
                            </div>
                        </NavigationMenuContent>
                    </NavigationMenuItem>

                    <NavigationMenuItem Value="components">
                        <NavigationMenuTrigger>Components</NavigationMenuTrigger>
                        <NavigationMenuContent>
                            <div class="grid gap-3 p-4 w-[500px] md:grid-cols-2">
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="/components/alert" class="block font-medium mb-1">Alert</a>
                                    <p class="text-sm text-muted-foreground">
                                        Displays important messages to users.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="/components/button" class="block font-medium mb-1">Button</a>
                                    <p class="text-sm text-muted-foreground">
                                        Interactive buttons with multiple variants.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="/components/dialog" class="block font-medium mb-1">Dialog</a>
                                    <p class="text-sm text-muted-foreground">
                                        Modal dialogs for user interactions.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="/components/toast" class="block font-medium mb-1">Toast</a>
                                    <p class="text-sm text-muted-foreground">
                                        Temporary notifications for users.
                                    </p>
                                </div>
                            </div>
                        </NavigationMenuContent>
                    </NavigationMenuItem>

                    <NavigationMenuItem>
                        <NavigationMenuLink Href="/components">Documentation</NavigationMenuLink>
                    </NavigationMenuItem>
                </NavigationMenuList>
            </NavigationMenu>
        </div>
    </div>

    <!-- Simple Links -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Simple Links</h2>
            <p class="text-sm text-muted-foreground">
                Navigation menu with only link items (no dropdowns).
            </p>
        </div>
        <div class="border rounded-lg p-4">
            <NavigationMenu>
                <NavigationMenuList>
                    <NavigationMenuItem>
                        <NavigationMenuLink Href="/">Home</NavigationMenuLink>
                    </NavigationMenuItem>
                    <NavigationMenuItem>
                        <NavigationMenuLink Href="/components">Components</NavigationMenuLink>
                    </NavigationMenuItem>
                    <NavigationMenuItem>
                        <NavigationMenuLink Href="/primitives">Primitives</NavigationMenuLink>
                    </NavigationMenuItem>
                    <NavigationMenuItem>
                        <NavigationMenuLink Href="/icons">Icons</NavigationMenuLink>
                    </NavigationMenuItem>
                </NavigationMenuList>
            </NavigationMenu>
        </div>
    </div>

    <!-- Keyboard Navigation -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Keyboard Navigation</h2>
            <p class="text-sm text-muted-foreground">
                Enable full keyboard navigation for accessibility with <code class="text-xs bg-muted px-1 py-0.5 rounded">EnableKeyboardNavigation="true"</code>.
            </p>
        </div>
        <div class="border rounded-lg p-4">
            <NavigationMenu EnableKeyboardNavigation="true">
                <NavigationMenuList>
                    <NavigationMenuItem Value="products">
                        <NavigationMenuTrigger>Products</NavigationMenuTrigger>
                        <NavigationMenuContent>
                            <div class="grid gap-3 p-4 w-[400px]">
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Analytics</a>
                                    <p class="text-sm text-muted-foreground">
                                        Track and analyze your data in real-time.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Automation</a>
                                    <p class="text-sm text-muted-foreground">
                                        Automate repetitive tasks with workflows.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Integration</a>
                                    <p class="text-sm text-muted-foreground">
                                        Connect with your favorite tools.
                                    </p>
                                </div>
                            </div>
                        </NavigationMenuContent>
                    </NavigationMenuItem>

                    <NavigationMenuItem Value="resources">
                        <NavigationMenuTrigger>Resources</NavigationMenuTrigger>
                        <NavigationMenuContent>
                            <div class="grid gap-3 p-4 w-[300px]">
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Documentation</a>
                                    <p class="text-sm text-muted-foreground">
                                        Guides and API references.
                                    </p>
                                </div>
                                <div class="p-3 rounded-lg hover:bg-accent">
                                    <a href="#" class="block font-medium mb-1">Blog</a>
                                    <p class="text-sm text-muted-foreground">
                                        Latest news and updates.
                                    </p>
                                </div>
                            </div>
                        </NavigationMenuContent>
                    </NavigationMenuItem>

                    <NavigationMenuItem>
                        <NavigationMenuLink Href="#">Pricing</NavigationMenuLink>
                    </NavigationMenuItem>
                </NavigationMenuList>
            </NavigationMenu>
        </div>
        <div class="border rounded-lg p-6 space-y-4 bg-muted/50">
            <div>
                <h3 class="font-medium mb-2">At Trigger Level</h3>
                <div class="space-y-1 text-sm">
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">ArrowRight</kbd> / <kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">ArrowLeft</kbd> — Navigate between triggers</p>
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">ArrowDown</kbd> — Open dropdown and focus first item</p>
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">Enter</kbd> / <kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">Space</kbd> — Toggle dropdown</p>
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">Escape</kbd> — Close dropdown</p>
                </div>
            </div>
            <div>
                <h3 class="font-medium mb-2">Within Dropdown Content</h3>
                <div class="space-y-1 text-sm">
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">ArrowDown</kbd> / <kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">ArrowUp</kbd> — Navigate between links</p>
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">Home</kbd> / <kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">End</kbd> — Jump to first/last link</p>
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">Enter</kbd> — Follow focused link</p>
                    <p><kbd class="px-1.5 py-0.5 bg-background border rounded text-xs">Escape</kbd> — Close dropdown, return focus to trigger</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Usage Notes -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Usage Notes</h2>
        </div>
        <div class="border rounded-lg p-6 space-y-3 bg-muted/50">
            <p class="text-sm">
                <strong>Structure:</strong> NavigationMenu → NavigationMenuList → NavigationMenuItem
            </p>
            <p class="text-sm">
                <strong>Dropdowns:</strong> Use NavigationMenuTrigger + NavigationMenuContent for dropdown menus
            </p>
            <p class="text-sm">
                <strong>Links:</strong> Use NavigationMenuLink for simple navigation links
            </p>
            <p class="text-sm">
                <strong>Hover to open:</strong> Dropdowns open on hover and close when mouse leaves
            </p>
            <p class="text-sm">
                <strong>Unique values:</strong> Give each NavigationMenuItem a unique Value prop for proper state management
            </p>
        </div>
    </div>

    <!-- API Reference -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
        </div>
        <div class="border rounded-lg p-6 space-y-4">
            <div>
                <h3 class="font-semibold mb-2">Components</h3>
                <div class="space-y-2 text-sm">
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenu</code> - Root container</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuList</code> - List of menu items</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuItem</code> - Individual menu item</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuTrigger</code> - Dropdown trigger button</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuContent</code> - Dropdown content panel</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuLink</code> - Navigation link</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuIndicator</code> - Visual active indicator</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">NavigationMenuViewport</code> - Styled viewport container</p>
                </div>
            </div>
            <Separator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">NavigationMenu.EnableKeyboardNavigation</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">bool</code> — Default: <code class="text-xs bg-muted px-1 py-0.5 rounded">false</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    Enables keyboard navigation within dropdown menus. When true, users can navigate items with arrow keys, Home/End, and Escape.
                </p>
            </div>
            <Separator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">NavigationMenuItem.Value</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">string?</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    Unique identifier for the menu item. Required for dropdown functionality.
                </p>
            </div>
            <Separator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">NavigationMenuLink.Href</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">string?</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    The URL the link navigates to.
                </p>
            </div>
            <Separator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">NavigationMenuLink.Match</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">NavLinkMatch</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    How to match the URL for active state. Default: Prefix.
                </p>
            </div>
        </div>
    </div>
</div>
