@page "/components/resizable"
@using BlazorBlueprint.Components.Resizable

<PageTitle>Resizable Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Resizable Component</h1>
            <p class="text-xl text-muted-foreground">
                Resizable panels with drag handles for adjustable layouts.
            </p>
        </div>
    </div>

    <!-- Basic Horizontal -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Horizontal Layout</h2>
            <p class="text-sm text-muted-foreground">
                Two panels side by side with a draggable handle.
            </p>
        </div>
        <div class="h-[200px] border rounded-lg overflow-hidden">
            <ResizablePanelGroup Direction="ResizableDirection.Horizontal">
                <ResizablePanel DefaultSize="50">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Panel One</span>
                    </div>
                </ResizablePanel>
                <ResizableHandle />
                <ResizablePanel DefaultSize="50">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Panel Two</span>
                    </div>
                </ResizablePanel>
            </ResizablePanelGroup>
        </div>
    </div>

    <!-- Vertical Layout -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Vertical Layout</h2>
            <p class="text-sm text-muted-foreground">
                Two panels stacked vertically.
            </p>
        </div>
        <div class="h-[300px] border rounded-lg overflow-hidden">
            <ResizablePanelGroup Direction="ResizableDirection.Vertical">
                <ResizablePanel DefaultSize="30">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Header</span>
                    </div>
                </ResizablePanel>
                <ResizableHandle />
                <ResizablePanel DefaultSize="70">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Content</span>
                    </div>
                </ResizablePanel>
            </ResizablePanelGroup>
        </div>
    </div>

    <!-- Without Handle Icon -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Without Handle Icon</h2>
            <p class="text-sm text-muted-foreground">
                Clean divider without the grip handle icon.
            </p>
        </div>
        <div class="h-[200px] border rounded-lg overflow-hidden">
            <ResizablePanelGroup Direction="ResizableDirection.Horizontal">
                <ResizablePanel DefaultSize="50">
                    <div class="flex h-full items-center justify-center p-6 bg-muted/50">
                        <span class="font-semibold">Left</span>
                    </div>
                </ResizablePanel>
                <ResizableHandle WithHandle="false" />
                <ResizablePanel DefaultSize="50">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Right</span>
                    </div>
                </ResizablePanel>
            </ResizablePanelGroup>
        </div>
    </div>

    <!-- Three Panels -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Three Panels</h2>
            <p class="text-sm text-muted-foreground">
                Multiple panels in a single group.
            </p>
        </div>
        <div class="h-[200px] border rounded-lg overflow-hidden">
            <ResizablePanelGroup Direction="ResizableDirection.Horizontal">
                <ResizablePanel DefaultSize="25">
                    <div class="flex h-full items-center justify-center p-6 bg-muted/30">
                        <span class="font-semibold">Sidebar</span>
                    </div>
                </ResizablePanel>
                <ResizableHandle />
                <ResizablePanel DefaultSize="50">
                    <div class="flex h-full items-center justify-center p-6">
                        <span class="font-semibold">Main Content</span>
                    </div>
                </ResizablePanel>
                <ResizableHandle />
                <ResizablePanel DefaultSize="25">
                    <div class="flex h-full items-center justify-center p-6 bg-muted/30">
                        <span class="font-semibold">Details</span>
                    </div>
                </ResizablePanel>
            </ResizablePanelGroup>
        </div>
    </div>

    <!-- Nested Layout -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Nested Layout</h2>
            <p class="text-sm text-muted-foreground">
                Complex layout with nested resizable panels.
            </p>
        </div>
        <div class="h-[400px] border rounded-lg overflow-hidden">
            <ResizablePanelGroup Direction="ResizableDirection.Horizontal">
                <ResizablePanel DefaultSize="30">
                    <div class="flex h-full items-center justify-center p-6 bg-muted/30">
                        <span class="font-semibold">Sidebar</span>
                    </div>
                </ResizablePanel>
                <ResizableHandle />
                <ResizablePanel DefaultSize="70">
                    <ResizablePanelGroup Direction="ResizableDirection.Vertical">
                        <ResizablePanel DefaultSize="60">
                            <div class="flex h-full items-center justify-center p-6">
                                <span class="font-semibold">Main Content</span>
                            </div>
                        </ResizablePanel>
                        <ResizableHandle />
                        <ResizablePanel DefaultSize="40">
                            <div class="flex h-full items-center justify-center p-6 bg-muted/20">
                                <span class="font-semibold">Terminal / Output</span>
                            </div>
                        </ResizablePanel>
                    </ResizablePanelGroup>
                </ResizablePanel>
            </ResizablePanelGroup>
        </div>
    </div>
</div>
