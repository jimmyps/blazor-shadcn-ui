@page "/components/toggle"
@using BlazorBlueprint.Components.Toggle
@using BlazorBlueprint.Components.Separator
@using BlazorBlueprint.Icons.Lucide.Components

<PageTitle>Toggle Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Toggle Component</h1>
            <p class="text-xl text-muted-foreground">
                A two-state button that can be either on or off.
            </p>
        </div>
    </div>

    <!-- Basic Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Example</h2>
            <p class="text-sm text-muted-foreground">
                A simple toggle button.
            </p>
        </div>
        <Toggle @bind-Pressed="_isPressed">
            <LucideIcon Name="bold" Class="h-4 w-4" />
        </Toggle>
        <p class="text-sm text-muted-foreground">Pressed: @_isPressed</p>
    </div>

    <!-- Variants -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Variants</h2>
            <p class="text-sm text-muted-foreground">
                Toggle comes in default and outline variants.
            </p>
        </div>
        <div class="flex gap-4">
            <Toggle Variant="ToggleVariant.Default">
                <LucideIcon Name="bold" Class="h-4 w-4" />
            </Toggle>
            <Toggle Variant="ToggleVariant.Outline">
                <LucideIcon Name="italic" Class="h-4 w-4" />
            </Toggle>
        </div>
    </div>

    <!-- Sizes -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Sizes</h2>
            <p class="text-sm text-muted-foreground">
                Toggle comes in small, default, and large sizes.
            </p>
        </div>
        <div class="flex items-center gap-4">
            <Toggle Size="ToggleSize.Small">
                <LucideIcon Name="bold" Class="h-3 w-3" />
            </Toggle>
            <Toggle Size="ToggleSize.Default">
                <LucideIcon Name="bold" Class="h-4 w-4" />
            </Toggle>
            <Toggle Size="ToggleSize.Large">
                <LucideIcon Name="bold" Class="h-5 w-5" />
            </Toggle>
        </div>
    </div>

    <!-- With Text -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Text</h2>
            <p class="text-sm text-muted-foreground">
                Toggle can include both icon and text.
            </p>
        </div>
        <Toggle Variant="ToggleVariant.Outline">
            <LucideIcon Name="italic" Class="h-4 w-4 mr-2" />
            Italic
        </Toggle>
    </div>

    <!-- Bookmark Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Bookmark Example</h2>
            <p class="text-sm text-muted-foreground">
                A toggle that changes appearance when pressed, showing filled icon state.
            </p>
        </div>
        <div class="flex gap-4 items-center">
            <Toggle @bind-Pressed="_isBookmarked" Variant="ToggleVariant.Outline">
                <LucideIcon Name="bookmark"
                            Class="h-4 w-4 mr-2"
                            Color="@(_isBookmarked ? "#3b82f6" : "currentColor")"
                            Fill="@(_isBookmarked ? "#3b82f6" : "none")" />
                Bookmark
            </Toggle>
            <span class="text-sm text-muted-foreground">@(_isBookmarked ? "Bookmarked" : "Not bookmarked")</span>
        </div>
    </div>

    <!-- Disabled -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Disabled</h2>
            <p class="text-sm text-muted-foreground">
                Toggle can be disabled.
            </p>
        </div>
        <Toggle Disabled="true">
            <LucideIcon Name="underline" Class="h-4 w-4" />
        </Toggle>
    </div>

    <!-- Toggle Group -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Toggle Group</h2>
            <p class="text-sm text-muted-foreground">
                Group multiple toggles together for single or multiple selection.
            </p>
        </div>
        <div class="space-y-4">
            <div>
                <p class="text-sm mb-2">Single selection:</p>
                <ToggleGroup TValue="string" @bind-Value="_alignment" Variant="ToggleVariant.Outline">
                    <ToggleGroupItem TValue="string" Value="@("left")">
                        <LucideIcon Name="align-left" Class="h-4 w-4" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("center")">
                        <LucideIcon Name="align-center" Class="h-4 w-4" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("right")">
                        <LucideIcon Name="align-right" Class="h-4 w-4" />
                    </ToggleGroupItem>
                </ToggleGroup>
                <p class="text-sm text-muted-foreground mt-2">Selected: @(_alignment ?? "none")</p>
            </div>
        </div>
    </div>

    <!-- API Reference -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
        </div>
        <div class="border rounded-lg p-6 space-y-4">
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">Toggle Parameters</h3>
                <div class="space-y-2 text-sm">
                    <p><strong>Pressed:</strong> <code class="bg-muted px-1 py-0.5 rounded">bool</code> - The pressed state</p>
                    <p><strong>Variant:</strong> <code class="bg-muted px-1 py-0.5 rounded">ToggleVariant</code> - Default or Outline</p>
                    <p><strong>Size:</strong> <code class="bg-muted px-1 py-0.5 rounded">ToggleSize</code> - Small, Default, or Large</p>
                    <p><strong>Disabled:</strong> <code class="bg-muted px-1 py-0.5 rounded">bool</code> - Disables the toggle</p>
                </div>
            </div>
            <Separator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">ToggleGroup Parameters</h3>
                <div class="space-y-2 text-sm">
                    <p><strong>Value:</strong> <code class="bg-muted px-1 py-0.5 rounded">TValue</code> - Selected value (single mode)</p>
                    <p><strong>Values:</strong> <code class="bg-muted px-1 py-0.5 rounded">List&lt;TValue&gt;</code> - Selected values (multiple mode)</p>
                    <p><strong>Type:</strong> <code class="bg-muted px-1 py-0.5 rounded">ToggleGroupType</code> - Single or Multiple</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool _isPressed;
    private bool _isBookmarked;
    private string? _alignment = "center";
}
