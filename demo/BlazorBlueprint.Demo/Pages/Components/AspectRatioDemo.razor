@page "/components/aspect-ratio"
@using BlazorBlueprint.Components.AspectRatio

<PageTitle>Aspect Ratio Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Aspect Ratio Component</h1>
            <p class="text-xl text-muted-foreground">
                Displays content within a desired ratio, maintaining consistent proportions.
            </p>
        </div>
    </div>

    <!-- 16:9 Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">16:9 Ratio</h2>
            <p class="text-sm text-muted-foreground">
                Common for video content and widescreen displays.
            </p>
        </div>
        <div class="w-[450px]">
            <AspectRatio Ratio="16.0 / 9.0">
                <img src="https://images.unsplash.com/photo-1588345921523-c2dcdb7f1dcd?w=800&dpr=2&q=80"
                     alt="Photo by Drew Beamer"
                     class="rounded-md object-cover" />
            </AspectRatio>
        </div>
    </div>

    <!-- 4:3 Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">4:3 Ratio</h2>
            <p class="text-sm text-muted-foreground">
                Traditional display ratio, good for photos.
            </p>
        </div>
        <div class="w-[300px]">
            <AspectRatio Ratio="4.0 / 3.0">
                <img src="https://images.unsplash.com/photo-1588345921523-c2dcdb7f1dcd?w=800&dpr=2&q=80"
                     alt="Photo by Drew Beamer"
                     class="rounded-md object-cover" />
            </AspectRatio>
        </div>
    </div>

    <!-- 1:1 Square -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">1:1 Square</h2>
            <p class="text-sm text-muted-foreground">
                Perfect square, great for avatars and thumbnails.
            </p>
        </div>
        <div class="w-[200px]">
            <AspectRatio Ratio="1">
                <img src="https://images.unsplash.com/photo-1588345921523-c2dcdb7f1dcd?w=800&dpr=2&q=80"
                     alt="Photo by Drew Beamer"
                     class="rounded-md object-cover" />
            </AspectRatio>
        </div>
    </div>

    <!-- 21:9 Ultrawide -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">21:9 Ultrawide</h2>
            <p class="text-sm text-muted-foreground">
                Cinematic ultrawide ratio.
            </p>
        </div>
        <div class="w-full max-w-[600px]">
            <AspectRatio Ratio="21.0 / 9.0">
                <img src="https://images.unsplash.com/photo-1588345921523-c2dcdb7f1dcd?w=800&dpr=2&q=80"
                     alt="Photo by Drew Beamer"
                     class="rounded-md object-cover" />
            </AspectRatio>
        </div>
    </div>

    <!-- With Placeholder Content -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Placeholder</h2>
            <p class="text-sm text-muted-foreground">
                Using aspect ratio with placeholder content.
            </p>
        </div>
        <div class="w-[300px]">
            <AspectRatio Ratio="16.0 / 9.0">
                <div class="flex items-center justify-center bg-muted rounded-md">
                    <span class="text-muted-foreground">16:9</span>
                </div>
            </AspectRatio>
        </div>
    </div>

    <!-- Video Embed -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Video Embed</h2>
            <p class="text-sm text-muted-foreground">
                Maintaining aspect ratio for embedded videos.
            </p>
        </div>
        <div class="w-full max-w-[500px]">
            <AspectRatio Ratio="16.0 / 9.0">
                <div class="flex items-center justify-center bg-black rounded-md text-white">
                    <span>Video Player Placeholder</span>
                </div>
            </AspectRatio>
        </div>
    </div>
</div>
