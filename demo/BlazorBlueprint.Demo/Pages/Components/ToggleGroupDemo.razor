@page "/components/toggle-group"
@using BlazorBlueprint.Components.Toggle
@using BlazorBlueprint.Components.Separator
@using BlazorBlueprint.Icons.Lucide.Components

<PageTitle>Toggle Group Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Toggle Group Component</h1>
            <p class="text-xl text-muted-foreground">
                A set of two-state buttons that can be toggled on or off.
            </p>
        </div>
    </div>

    <!-- Single Selection -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Single Selection</h2>
            <p class="text-sm text-muted-foreground">
                Only one item can be selected at a time.
            </p>
        </div>
        <ToggleGroup TValue="string" @bind-Value="_alignment" Variant="ToggleVariant.Outline">
            <ToggleGroupItem TValue="string" Value="@("left")">
                <LucideIcon Name="align-left" Class="h-4 w-4" />
            </ToggleGroupItem>
            <ToggleGroupItem TValue="string" Value="@("center")">
                <LucideIcon Name="align-center" Class="h-4 w-4" />
            </ToggleGroupItem>
            <ToggleGroupItem TValue="string" Value="@("right")">
                <LucideIcon Name="align-right" Class="h-4 w-4" />
            </ToggleGroupItem>
        </ToggleGroup>
        <p class="text-sm text-muted-foreground">Selected: @(_alignment ?? "none")</p>
    </div>

    <!-- Multiple Selection -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Multiple Selection</h2>
            <p class="text-sm text-muted-foreground">
                Multiple items can be selected at once.
            </p>
        </div>
        <ToggleGroup TValue="string" @bind-Values="_formatting" Type="ToggleGroupType.Multiple" Variant="ToggleVariant.Outline">
            <ToggleGroupItem TValue="string" Value="@("bold")">
                <LucideIcon Name="bold" Class="h-4 w-4" />
            </ToggleGroupItem>
            <ToggleGroupItem TValue="string" Value="@("italic")">
                <LucideIcon Name="italic" Class="h-4 w-4" />
            </ToggleGroupItem>
            <ToggleGroupItem TValue="string" Value="@("underline")">
                <LucideIcon Name="underline" Class="h-4 w-4" />
            </ToggleGroupItem>
        </ToggleGroup>
        <p class="text-sm text-muted-foreground">Selected: @(string.Join(", ", _formatting ?? new List<string>()))</p>
    </div>

    <!-- Variants -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Variants</h2>
            <p class="text-sm text-muted-foreground">
                Toggle groups come in default and outline variants.
            </p>
        </div>
        <div class="space-y-4">
            <div>
                <p class="text-sm mb-2">Default:</p>
                <ToggleGroup TValue="string" DefaultValue="@("center")" Variant="ToggleVariant.Default">
                    <ToggleGroupItem TValue="string" Value="@("left")">
                        <LucideIcon Name="align-left" Class="h-4 w-4" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("center")">
                        <LucideIcon Name="align-center" Class="h-4 w-4" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("right")">
                        <LucideIcon Name="align-right" Class="h-4 w-4" />
                    </ToggleGroupItem>
                </ToggleGroup>
            </div>
            <div>
                <p class="text-sm mb-2">Outline:</p>
                <ToggleGroup TValue="string" DefaultValue="@("center")" Variant="ToggleVariant.Outline">
                    <ToggleGroupItem TValue="string" Value="@("left")">
                        <LucideIcon Name="align-left" Class="h-4 w-4" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("center")">
                        <LucideIcon Name="align-center" Class="h-4 w-4" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("right")">
                        <LucideIcon Name="align-right" Class="h-4 w-4" />
                    </ToggleGroupItem>
                </ToggleGroup>
            </div>
        </div>
    </div>

    <!-- Sizes -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Sizes</h2>
            <p class="text-sm text-muted-foreground">
                Toggle groups come in small, default, and large sizes.
            </p>
        </div>
        <div class="space-y-4">
            <div>
                <p class="text-sm mb-2">Small:</p>
                <ToggleGroup TValue="string" DefaultValue="@("center")" Variant="ToggleVariant.Outline" Size="ToggleSize.Small">
                    <ToggleGroupItem TValue="string" Value="@("left")">
                        <LucideIcon Name="align-left" Class="h-3 w-3" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("center")">
                        <LucideIcon Name="align-center" Class="h-3 w-3" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("right")">
                        <LucideIcon Name="align-right" Class="h-3 w-3" />
                    </ToggleGroupItem>
                </ToggleGroup>
            </div>
            <div>
                <p class="text-sm mb-2">Default:</p>
                <ToggleGroup TValue="string" DefaultValue="@("center")" Variant="ToggleVariant.Outline" Size="ToggleSize.Default">
                    <ToggleGroupItem TValue="string" Value="@("left")">
                        <LucideIcon Name="align-left" Class="h-4 w-4" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("center")">
                        <LucideIcon Name="align-center" Class="h-4 w-4" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("right")">
                        <LucideIcon Name="align-right" Class="h-4 w-4" />
                    </ToggleGroupItem>
                </ToggleGroup>
            </div>
            <div>
                <p class="text-sm mb-2">Large:</p>
                <ToggleGroup TValue="string" DefaultValue="@("center")" Variant="ToggleVariant.Outline" Size="ToggleSize.Large">
                    <ToggleGroupItem TValue="string" Value="@("left")">
                        <LucideIcon Name="align-left" Class="h-5 w-5" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("center")">
                        <LucideIcon Name="align-center" Class="h-5 w-5" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("right")">
                        <LucideIcon Name="align-right" Class="h-5 w-5" />
                    </ToggleGroupItem>
                </ToggleGroup>
            </div>
        </div>
    </div>

    <!-- Disabled -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Disabled</h2>
            <p class="text-sm text-muted-foreground">
                Toggle group can be disabled entirely or individual items can be disabled.
            </p>
        </div>
        <div class="space-y-4">
            <div>
                <p class="text-sm mb-2">Entire group disabled:</p>
                <ToggleGroup TValue="string" DefaultValue="@("center")" Variant="ToggleVariant.Outline" Disabled="true">
                    <ToggleGroupItem TValue="string" Value="@("left")">
                        <LucideIcon Name="align-left" Class="h-4 w-4" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("center")">
                        <LucideIcon Name="align-center" Class="h-4 w-4" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("right")">
                        <LucideIcon Name="align-right" Class="h-4 w-4" />
                    </ToggleGroupItem>
                </ToggleGroup>
            </div>
            <div>
                <p class="text-sm mb-2">Single item disabled:</p>
                <ToggleGroup TValue="string" DefaultValue="@("left")" Variant="ToggleVariant.Outline">
                    <ToggleGroupItem TValue="string" Value="@("left")">
                        <LucideIcon Name="align-left" Class="h-4 w-4" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("center")" Disabled="true">
                        <LucideIcon Name="align-center" Class="h-4 w-4" />
                    </ToggleGroupItem>
                    <ToggleGroupItem TValue="string" Value="@("right")">
                        <LucideIcon Name="align-right" Class="h-4 w-4" />
                    </ToggleGroupItem>
                </ToggleGroup>
            </div>
        </div>
    </div>

    <!-- API Reference -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
        </div>
        <div class="border rounded-lg p-6 space-y-4">
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">ToggleGroup Parameters</h3>
                <div class="space-y-2 text-sm">
                    <p><strong>Value:</strong> <code class="bg-muted px-1 py-0.5 rounded">TValue?</code> - Selected value (single selection mode)</p>
                    <p><strong>Values:</strong> <code class="bg-muted px-1 py-0.5 rounded">List&lt;TValue&gt;?</code> - Selected values (multiple selection mode)</p>
                    <p><strong>Type:</strong> <code class="bg-muted px-1 py-0.5 rounded">ToggleGroupType</code> - Single (default) or Multiple</p>
                    <p><strong>Variant:</strong> <code class="bg-muted px-1 py-0.5 rounded">ToggleVariant</code> - Default or Outline</p>
                    <p><strong>Size:</strong> <code class="bg-muted px-1 py-0.5 rounded">ToggleSize</code> - Small, Default, or Large</p>
                    <p><strong>Disabled:</strong> <code class="bg-muted px-1 py-0.5 rounded">bool</code> - Disables the entire group</p>
                </div>
            </div>
            <Separator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">ToggleGroupItem Parameters</h3>
                <div class="space-y-2 text-sm">
                    <p><strong>Value:</strong> <code class="bg-muted px-1 py-0.5 rounded">TValue</code> - The value of this item</p>
                    <p><strong>Disabled:</strong> <code class="bg-muted px-1 py-0.5 rounded">bool</code> - Disables this specific item</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string? _alignment = "center";
    private List<string>? _formatting = new() { "bold" };
}
