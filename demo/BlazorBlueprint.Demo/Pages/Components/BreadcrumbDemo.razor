@page "/components/breadcrumb"
@using BlazorBlueprint.Components.Breadcrumb
@using BlazorBlueprint.Components.Separator

<PageTitle>Breadcrumb Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Breadcrumb Component</h1>
            <p class="text-xl text-muted-foreground">
                Displays the path to the current resource using a hierarchy of links.
            </p>
        </div>
    </div>

    <!-- Basic Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Example</h2>
            <p class="text-sm text-muted-foreground">
                A simple breadcrumb navigation showing the current page path.
            </p>
        </div>
        <Breadcrumb>
            <BreadcrumbItem>
                <BreadcrumbLink Href="/">Home</BreadcrumbLink>
            </BreadcrumbItem>
            <BreadcrumbSeparator />
            <BreadcrumbItem>
                <BreadcrumbLink Href="/components">Components</BreadcrumbLink>
            </BreadcrumbItem>
            <BreadcrumbSeparator />
            <BreadcrumbItem>
                <BreadcrumbPage>Breadcrumb</BreadcrumbPage>
            </BreadcrumbItem>
        </Breadcrumb>
    </div>

    <!-- With Ellipsis -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">With Ellipsis</h2>
            <p class="text-sm text-muted-foreground">
                Use ellipsis to indicate collapsed breadcrumb items.
            </p>
        </div>
        <Breadcrumb>
            <BreadcrumbItem>
                <BreadcrumbLink Href="/">Home</BreadcrumbLink>
            </BreadcrumbItem>
            <BreadcrumbSeparator />
            <BreadcrumbItem>
                <BreadcrumbEllipsis />
            </BreadcrumbItem>
            <BreadcrumbSeparator />
            <BreadcrumbItem>
                <BreadcrumbLink Href="/components">Components</BreadcrumbLink>
            </BreadcrumbItem>
            <BreadcrumbSeparator />
            <BreadcrumbItem>
                <BreadcrumbPage>Breadcrumb</BreadcrumbPage>
            </BreadcrumbItem>
        </Breadcrumb>
    </div>

    <!-- Custom Separator -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Custom Separator</h2>
            <p class="text-sm text-muted-foreground">
                Customize the separator between breadcrumb items.
            </p>
        </div>
        <Breadcrumb>
            <BreadcrumbItem>
                <BreadcrumbLink Href="/">Home</BreadcrumbLink>
            </BreadcrumbItem>
            <BreadcrumbSeparator>/</BreadcrumbSeparator>
            <BreadcrumbItem>
                <BreadcrumbLink Href="/components">Components</BreadcrumbLink>
            </BreadcrumbItem>
            <BreadcrumbSeparator>/</BreadcrumbSeparator>
            <BreadcrumbItem>
                <BreadcrumbPage>Breadcrumb</BreadcrumbPage>
            </BreadcrumbItem>
        </Breadcrumb>
    </div>

    <!-- API Reference -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
        </div>
        <div class="border rounded-lg p-6 space-y-4">
            <div>
                <h3 class="font-semibold mb-2">Components</h3>
                <div class="space-y-2 text-sm">
                    <p><code class="bg-muted px-1 py-0.5 rounded">Breadcrumb</code> - Container with nav element</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">BreadcrumbItem</code> - Individual breadcrumb item</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">BreadcrumbLink</code> - Clickable link</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">BreadcrumbPage</code> - Current page (non-clickable)</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">BreadcrumbSeparator</code> - Separator between items</p>
                    <p><code class="bg-muted px-1 py-0.5 rounded">BreadcrumbEllipsis</code> - Collapsed items indicator</p>
                </div>
            </div>
        </div>
    </div>
</div>
