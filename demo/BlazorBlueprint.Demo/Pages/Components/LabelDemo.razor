@page "/components/label"
@using BlazorBlueprint.Components.Label
@using BlazorBlueprint.Components.Input

<PageTitle>Label Component - Blazor Blueprint</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
        <h1 class="text-4xl font-bold tracking-tight">Label Component</h1>
        <p class="text-xl text-muted-foreground">
            Renders an accessible label associated with form controls.
        </p>
        </div>
    </div>

    <div class="space-y-6">
    </div>

    <!-- Basic Usage -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Basic Usage</h2>
            <p class="text-sm text-muted-foreground">
                Label associated with an input field using the For parameter.
            </p>
        </div>
        <div class="max-w-md space-y-2">
            <Label For="basic-input">Your Name</Label>
            <Input Id="basic-input" Placeholder="Enter your name" />
        </div>
    </div>

    <!-- Form Fields -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Form Fields</h2>
            <p class="text-sm text-muted-foreground">
                Labels with various input types.
            </p>
        </div>
        <div class="max-w-md space-y-6">
            <div class="space-y-2">
                <Label For="email-field">Email Address</Label>
                <Input Id="email-field" Type="InputType.Email" Placeholder="you@example.com" />
            </div>

            <div class="space-y-2">
                <Label For="password-field">Password</Label>
                <Input Id="password-field" Type="InputType.Password" Placeholder="••••••••" />
            </div>

            <div class="space-y-2">
                <Label For="url-field">Website URL</Label>
                <Input Id="url-field" Type="InputType.Url" Placeholder="https://example.com" />
            </div>

            <div class="space-y-2">
                <Label For="date-field">Birth Date</Label>
                <Input Id="date-field" Type="InputType.Date" />
            </div>
        </div>
    </div>

    <!-- Required Fields -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Required Field Indicators</h2>
            <p class="text-sm text-muted-foreground">
                Adding visual indicators for required fields.
            </p>
        </div>
        <div class="max-w-md space-y-6">
            <div class="space-y-2">
                <Label For="required-username">
                    Username <span class="text-destructive">*</span>
                </Label>
                <Input Id="required-username" Required Placeholder="Enter username" />
            </div>

            <div class="space-y-2">
                <Label For="required-email">
                    Email <Badge Variant="BadgeVariant.Destructive" Class="ml-2 text-[10px] px-1 py-0">Required</Badge>
                </Label>
                <Input Id="required-email" Type="InputType.Email" Required Placeholder="you@example.com" />
            </div>
        </div>
    </div>

    <!-- Checkbox Labels -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Checkbox Labels</h2>
            <p class="text-sm text-muted-foreground">
                Labels used with checkboxes for clickable selection.
            </p>
        </div>
        <div class="max-w-md space-y-4">
            <div class="flex items-center space-x-2">
                <Checkbox Id="terms-checkbox" />
                <Label For="terms-checkbox" Class="cursor-pointer">
                    Accept terms and conditions
                </Label>
            </div>

            <div class="flex items-center space-x-2">
                <Checkbox Id="marketing-checkbox" />
                <Label For="marketing-checkbox" Class="cursor-pointer">
                    Send me marketing emails
                </Label>
            </div>

            <div class="flex items-center space-x-2">
                <Checkbox Id="newsletter-checkbox" />
                <Label For="newsletter-checkbox" Class="cursor-pointer">
                    Subscribe to newsletter
                </Label>
            </div>
        </div>
    </div>

    <!-- Disabled State -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Disabled State</h2>
            <p class="text-sm text-muted-foreground">
                Label automatically styles when associated control is disabled (using peer-disabled).
            </p>
        </div>
        <div class="max-w-md space-y-6">
            <div class="space-y-2">
                <Input Id="disabled-input" Disabled Class="peer" />
                <Label For="disabled-input">Disabled Field Label</Label>
                <p class="text-xs text-muted-foreground">Notice how the label appears muted when the input is disabled.</p>
            </div>

            <div class="flex items-center space-x-2">
                <Checkbox Id="disabled-checkbox" Disabled Class="peer" />
                <Label For="disabled-checkbox">Disabled Checkbox Option</Label>
            </div>
        </div>
    </div>

    <!-- Custom Styling -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Custom Styling</h2>
            <p class="text-sm text-muted-foreground">
                Override label styles with the Class parameter.
            </p>
        </div>
        <div class="max-w-md space-y-6">
            <div class="space-y-2">
                <Label For="large-label-input" Class="text-lg font-bold">Large Bold Label</Label>
                <Input Id="large-label-input" />
            </div>

            <div class="space-y-2">
                <Label For="small-label-input" Class="text-xs text-muted-foreground font-normal">Small Muted Label</Label>
                <Input Id="small-label-input" />
            </div>

            <div class="space-y-2">
                <Label For="colored-label-input" Class="text-blue-600 dark:text-blue-400">Colored Label</Label>
                <Input Id="colored-label-input" />
            </div>

            <div class="space-y-2">
                <Label For="uppercase-label-input" Class="uppercase tracking-wide">Uppercase Label</Label>
                <Input Id="uppercase-label-input" />
            </div>
        </div>
    </div>

    <!-- Descriptive Labels -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Labels with Descriptions</h2>
            <p class="text-sm text-muted-foreground">
                Combining labels with help text for better UX.
            </p>
        </div>
        <div class="max-w-md space-y-6">
            <div class="space-y-2">
                <Label For="display-name">Display Name</Label>
                <Input Id="display-name" Placeholder="John Doe" />
                <p class="text-xs text-muted-foreground">
                    This is your public display name. It can be your real name or a pseudonym.
                </p>
            </div>

            <div class="space-y-2">
                <Label For="bio">Bio</Label>
                <Input Id="bio" Placeholder="Tell us about yourself" />
                <p class="text-xs text-muted-foreground">
                    Brief description for your profile. Max 160 characters.
                </p>
            </div>
        </div>
    </div>

    <!-- Form Layout Example -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Complete Form Example</h2>
            <p class="text-sm text-muted-foreground">
                Real-world form with multiple labeled fields.
            </p>
        </div>
        <div class="max-w-md border rounded-lg p-6 space-y-6">
            <div class="space-y-2">
                <Label For="form-name">
                    Full Name <span class="text-destructive">*</span>
                </Label>
                <Input Id="form-name" Required Placeholder="John Doe" />
            </div>

            <div class="space-y-2">
                <Label For="form-email">
                    Email Address <span class="text-destructive">*</span>
                </Label>
                <Input Id="form-email" Type="InputType.Email" Required Placeholder="john@example.com" />
            </div>

            <div class="space-y-2">
                <Label For="form-phone">Phone Number</Label>
                <Input Id="form-phone" Type="InputType.Tel" Placeholder="+1 (555) 123-4567" />
            </div>

            <Separator />

            <div class="space-y-3">
                <Label>Preferences</Label>
                <div class="space-y-2">
                    <div class="flex items-center space-x-2">
                        <Checkbox Id="form-newsletter" />
                        <Label For="form-newsletter" Class="cursor-pointer font-normal">
                            Subscribe to newsletter
                        </Label>
                    </div>
                    <div class="flex items-center space-x-2">
                        <Checkbox Id="form-updates" />
                        <Label For="form-updates" Class="cursor-pointer font-normal">
                            Receive product updates
                        </Label>
                    </div>
                </div>
            </div>

            <div class="flex gap-3">
                <Button Variant="ButtonVariant.Default">Submit</Button>
                <Button Variant="ButtonVariant.Outline">Cancel</Button>
            </div>
        </div>
    </div>

    <!-- Accessibility Notes -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">Accessibility Notes</h2>
            <p class="text-sm text-muted-foreground">
                Best practices for accessible labels.
            </p>
        </div>
        <div class="border rounded-lg p-6 space-y-3 bg-muted/50">
            <p class="text-sm">
                ✓ <strong>Always use For attribute:</strong> Associate labels with form controls explicitly.
            </p>
            <p class="text-sm">
                ✓ <strong>Descriptive text:</strong> Labels should clearly describe the form field's purpose.
            </p>
            <p class="text-sm">
                ✓ <strong>Required indicators:</strong> Use visual indicators for required fields, but also use HTML5 required attribute.
            </p>
            <p class="text-sm">
                ✓ <strong>Help text:</strong> Place additional context below the input using aria-describedby.
            </p>
            <p class="text-sm">
                ✓ <strong>Error messages:</strong> Link errors to inputs with aria-describedby for screen readers.
            </p>
        </div>
    </div>

    <!-- API Reference -->
    <div class="space-y-4">
        <div class="space-y-2">
            <h2 class="text-2xl font-semibold">API Reference</h2>
        </div>
        <div class="border rounded-lg p-6 space-y-4">
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">For</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">string?</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    The ID of the form element this label is associated with (maps to htmlFor attribute).
                    Clicking the label will focus/activate the associated control.
                </p>
            </div>
            <Separator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">Class</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">string?</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    Additional CSS classes to apply to the label element.
                </p>
            </div>
            <Separator />
            <div>
                <h3 class="font-mono text-sm font-semibold mb-2">ChildContent</h3>
                <p class="text-sm text-muted-foreground mb-2">
                    Type: <code class="text-xs bg-muted px-1 py-0.5 rounded">RenderFragment?</code>
                </p>
                <p class="text-sm text-muted-foreground">
                    The content to display inside the label (text, icons, indicators, etc.).
                </p>
            </div>
        </div>
    </div>
</div>
