<!DOCTYPE html>
<html lang="en" data-theme="default">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <ResourcePreloader />

    <!-- Assets from referenced Razor Class Libraries use _content/ -->
    <link href="_content/NeoBlazorUI.Components/blazorui.css" rel="stylesheet" />
    
    <!-- Assets from Client project's wwwroot now served from root -->
    <link rel="stylesheet" href="@Assets["css/app.css"]" />
    <ImportMap />
    <!-- AG Grid Enterprise imports -->
    <GridImportMap />

    <link rel="icon" type="image/png" href="@Assets["favicon.png"]" />
    
    <HeadOutlet />
</head>
<body>
    <Routes @rendermode="InteractiveAuto" />

    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">ðŸ—™</a>
    </div>

    <script src="@Assets["_framework/blazor.web.js"]"></script>
    <script>
        window.toggleDarkMode = () => document.documentElement.classList.toggle('dark');
        window.isDarkModeEnabled = () => document.documentElement.classList.contains('dark');
    </script>
</body>
</html>
