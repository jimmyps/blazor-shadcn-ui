@page "/components/carousel"
@using BlazorUI.Components.Carousel
@using BlazorUI.Components.Card

<PageTitle>Carousel Component - BlazorUI</PageTitle>

<div class="space-y-8 max-w-4xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Carousel Component</h1>
            <p class="text-xl text-muted-foreground">
                A slideshow component with animations, touch gestures, and keyboard navigation.
            </p>
        </div>
    </div>

    <div class="space-y-6">
        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Default</h2>
                <p class="text-muted-foreground">
                    A basic carousel with navigation arrows.
                </p>
            </div>

            <div class="flex justify-center">
                <div class="w-full max-w-xs">
                    <Carousel>
                        @foreach (var i in Enumerable.Range(1, 5))
                        {
                            <CarouselItem>
                                <div class="p-1">
                                    <Card>
                                        <CardContent Class="flex h-[150px] items-center justify-center p-6">
                                            <span class="text-4xl font-semibold">@i</span>
                                        </CardContent>
                                    </Card>
                                </div>
                            </CarouselItem>
                        }
                    </Carousel>
                </div>
            </div>
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">With Indicators</h2>
                <p class="text-muted-foreground">
                    Carousel with dot indicators showing the current slide.
                </p>
            </div>

            <div class="flex justify-center">
                <div class="w-full max-w-xs">
                    <Carousel ShowIndicators="true">
                        @foreach (var i in Enumerable.Range(1, 5))
                        {
                            <CarouselItem>
                                <div class="p-1">
                                    <Card>
                                        <CardContent Class="flex h-[150px] items-center justify-center p-6">
                                            <span class="text-4xl font-semibold">@i</span>
                                        </CardContent>
                                    </Card>
                                </div>
                            </CarouselItem>
                        }
                    </Carousel>
                </div>
            </div>
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Auto-Play</h2>
                <p class="text-muted-foreground">
                    Carousel that automatically advances every 3 seconds.
                </p>
            </div>

            <div class="flex justify-center">
                <div class="w-full max-w-xs">
                    <Carousel AutoPlay="true" AutoPlayInterval="3000" Loop="true" ShowIndicators="true">
                        @foreach (var i in Enumerable.Range(1, 5))
                        {
                            <CarouselItem>
                                <div class="p-1">
                                    <Card>
                                        <CardContent Class="flex h-[150px] items-center justify-center p-6">
                                            <span class="text-4xl font-semibold">@i</span>
                                        </CardContent>
                                    </Card>
                                </div>
                            </CarouselItem>
                        }
                    </Carousel>
                </div>
            </div>
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Loop Mode</h2>
                <p class="text-muted-foreground">
                    Infinite loop carousel - navigate past the last slide to return to the first.
                </p>
            </div>

            <div class="flex justify-center">
                <div class="w-full max-w-xs">
                    <Carousel Loop="true">
                        @foreach (var i in Enumerable.Range(1, 5))
                        {
                            <CarouselItem>
                                <div class="p-1">
                                    <Card>
                                        <CardContent Class="flex h-[150px] items-center justify-center p-6">
                                            <span class="text-4xl font-semibold">@i</span>
                                        </CardContent>
                                    </Card>
                                </div>
                            </CarouselItem>
                        }
                    </Carousel>
                </div>
            </div>
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Multiple Slides</h2>
                <p class="text-muted-foreground">
                    Show multiple slides at once (3 slides per view).
                </p>
            </div>

            <div class="flex justify-center">
                <div class="w-full max-w-2xl">
                    <Carousel SlidesPerView="3" Gap="16">
                        @foreach (var i in Enumerable.Range(1, 10))
                        {
                            <CarouselItem>
                                <div class="p-1">
                                    <Card>
                                        <CardContent Class="flex h-[150px] items-center justify-center p-6">
                                            <span class="text-3xl font-semibold">@i</span>
                                        </CardContent>
                                    </Card>
                                </div>
                            </CarouselItem>
                        }
                    </Carousel>
                </div>
            </div>
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Vertical Carousel</h2>
                <p class="text-muted-foreground">
                    Navigate vertically instead of horizontally.
                </p>
            </div>

            <div class="flex justify-center">
                <div class="w-full max-w-xs">
                    <div class="h-[400px]">
                        <Carousel Orientation="CarouselOrientation.Vertical" ShowIndicators="true">
                            @foreach (var i in Enumerable.Range(1, 5))
                            {
                                <CarouselItem>
                                    <div class="p-1">
                                        <Card>
                                            <CardContent Class="flex h-[150px] items-center justify-center p-6">
                                                <span class="text-4xl font-semibold">@i</span>
                                            </CardContent>
                                        </Card>
                                    </div>
                                </CarouselItem>
                            }
                        </Carousel>
                    </div>
                </div>
            </div>
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Image Gallery</h2>
                <p class="text-muted-foreground">
                    Carousel with images and captions.
                </p>
            </div>

            <div class="flex justify-center">
                <div class="w-full max-w-lg">
                    <Carousel ShowIndicators="true" OnSlideChange="HandleSlideChange">
                        @foreach (var image in galleryImages)
                        {
                            <CarouselItem>
                                <div class="p-1">
                                    <Card>
                                        <CardContent Class="flex flex-col items-center justify-center p-6 space-y-4">
                                            <div class="w-full h-40 bg-muted rounded-lg flex items-center justify-center">
                                                <span class="text-6xl">@image.Icon</span>
                                            </div>
                                            <div class="text-center">
                                                <h3 class="text-xl font-semibold">@image.Title</h3>
                                                <p class="text-sm text-muted-foreground">@image.Description</p>
                                            </div>
                                        </CardContent>
                                    </Card>
                                </div>
                            </CarouselItem>
                        }
                    </Carousel>
                    <p class="text-sm text-muted-foreground text-center mt-4">
                        Current slide: @(currentSlideIndex + 1) of @galleryImages.Count
                    </p>
                </div>
            </div>
        </section>

        <section class="space-y-4">
            <div class="space-y-2">
                <h2 class="text-2xl font-semibold">Without Navigation</h2>
                <p class="text-muted-foreground">
                    Carousel without navigation arrows (swipe or drag only).
                </p>
            </div>

            <div class="flex justify-center">
                <div class="w-full max-w-xs">
                    <Carousel ShowNavigation="false" ShowIndicators="true" EnableDrag="true">
                        @foreach (var i in Enumerable.Range(1, 5))
                        {
                            <CarouselItem>
                                <div class="p-1">
                                    <Card>
                                        <CardContent Class="flex h-[150px] items-center justify-center p-6">
                                            <span class="text-4xl font-semibold">@i</span>
                                        </CardContent>
                                    </Card>
                                </div>
                            </CarouselItem>
                        }
                    </Carousel>
                </div>
            </div>
            <p class="text-sm text-muted-foreground text-center">
                Swipe or drag to navigate
            </p>
        </section>
    </div>
</div>

