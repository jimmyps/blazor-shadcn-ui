@using BlazorUI.Components.Chart
@using BlazorUI.Components.Card

<div class="space-y-8">
    <!-- Radar Chart - Simple -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Radar Chart</h3>
            <p class="text-sm text-muted-foreground">A simple radar chart</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Skills Assessment</CardTitle>
                <CardDescription>Developer skill profile</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="400">
                    <RadarChart Data="@radarData">
                        <Tooltip Mode="TooltipMode.Item" />
                        <Legend />
                        <Radar DataKey="score" Name="Skills" Fill="true" />
                    </RadarChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>

    <!-- Radar Chart - Without Fill -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Radar Without Fill</h3>
            <p class="text-sm text-muted-foreground">Line-only radar chart</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Performance Metrics</CardTitle>
                <CardDescription>System performance indicators</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="400">
                    <RadarChart Data="@radarData">
                        <Tooltip Mode="TooltipMode.Item" />
                        <Legend />
                        <Radar DataKey="score" Name="Metrics" Fill="false" />
                    </RadarChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>
</div>

@code {
    private record RadarData(int score, int performance, int reliability, int usability, int security, int scalability);

    private List<RadarData> radarData = new()
    {
        new(85, 90, 75, 88, 82, 78)
    };
}
