@using BlazorUI.Components.Chart
@using BlazorUI.Components.Card

<div class="space-y-8">
    <!-- Radar Chart - Default -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Radar Chart</h3>
            <p class="text-sm text-muted-foreground">Showing skill assessment across multiple dimensions</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Radar Chart</ChartPanelTitle>
                <ChartPanelDescription">Skills Assessment</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <RadarChart Data="@radarData" 
                           LabelDataKey="Skill"
                           Series="@radarSeries"
                           Height="400"
                           ShowExportButton="true"
                           ExportFileName="radar-chart" />
            </ChartPanelContent>
            <ChartPanelFooter Class="flex-col items-start gap-2 text-sm">
                <div class="flex gap-2 font-medium leading-none">
                    Overall performance trending up <span class="ml-1">üìà</span>
                </div>
                <div class="leading-none text-muted-foreground">
                    Quarterly skills assessment
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>

    <!-- Radar Chart - Multiple Series -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Multiple Series</h3>
            <p class="text-sm text-muted-foreground">Comparing multiple datasets on radar chart</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle">Team Comparison</ChartPanelTitle>
                <ChartPanelDescription>Performance across different metrics</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <RadarChart Data="@comparisonData" 
                           LabelDataKey="Metric"
                           Series="@comparisonSeries"
                           Height="400" />
            </ChartPanelContent>
            <ChartPanelFooter>
                <div class="flex w-full items-start gap-2 text-sm">
                    <div class="grid gap-2">
                        <div class="flex items-center gap-2 font-medium leading-none">
                            Team A leads in most categories
                        </div>
                        <div class="flex items-center gap-2 leading-none text-muted-foreground">
                            Q1 2024 Performance Review
                        </div>
                    </div>
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>

    <!-- Radar Chart - Icons -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Icons</h3>
            <p class="text-sm text-muted-foreground">A radar chart with icon labels</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Developer Skills</ChartPanelTitle>
                <ChartPanelDescription>Technical competencies assessment</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <RadarChart Data="@skillsData" 
                           LabelDataKey="Area"
                           Series="@skillsSeries"
                           Height="400" />
            </ChartPanelContent>
            <ChartPanelFooter Class="flex-col items-start gap-2 text-sm">
                <div class="flex gap-2 font-medium leading-none">
                    Strong full-stack capabilities
                </div>
                <div class="leading-none text-muted-foreground">
                    Annual skills review
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>

    <!-- Radar Chart - Dots -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Dots</h3>
            <p class="text-sm text-muted-foreground">A radar chart with visible data points</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Product Features</ChartPanelTitle>
                <ChartPanelDescription>Feature completeness assessment</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <RadarChart Data="@featuresData" 
                           LabelDataKey="Feature"
                           Series="@featuresSeries"
                           Height="400" />
            </ChartPanelContent>
            <ChartPanelFooter>
                <div class="flex w-full items-start gap-2 text-sm">
                    <div class="grid gap-2">
                        <div class="flex items-center gap-2 leading-none text-muted-foreground">
                            Product roadmap progress tracking
                        </div>
                    </div>
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>
</div>

