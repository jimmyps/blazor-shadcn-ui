@using BlazorUI.Components.Old.Chart
@using BlazorUI.Components.Card

<div class="space-y-8">
    <!-- Line Chart - Default -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Line Chart</h3>
            <p class="text-sm text-muted-foreground">Showing total visitors for the last 6 months</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Line Chart</ChartPanelTitle>
                <ChartPanelDescription>January - June 2024</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <LineChart Data="@lineData" 
                          XAxisDataKey="Month"
                          YAxisDataKey="Desktop"
                          Label="Desktop"
                          Height="300"
                          Curved="true"
                          ShowExportButton="true"
                          ExportFileName="line-chart" />
            </ChartPanelContent>
            <ChartPanelFooter>
                <div class="flex gap-2 font-medium leading-none">
                    Trending up by 5.2% this month <span class="ml-1">ðŸ“ˆ</span>
                </div>
                <div class="leading-none text-muted-foreground">
                    Showing total visitors for the last 6 months
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>

    <!-- Line Chart - Linear with Gradient -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Linear</h3>
            <p class="text-sm text-muted-foreground">A line chart with straight lines and gradient fill</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Line Chart - Linear</ChartPanelTitle>
                <ChartPanelDescription>January - June 2024</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <LineChart Data="@lineData" 
                          XAxisDataKey="Month"
                          YAxisDataKey="Desktop"
                          Label="Desktop"
                          Height="300"
                          Curved="false"
                          FillArea="true"
                          GradientFill="true"
                          GradientStartOpacity="0.5"
                          GradientEndOpacity="0.05"
                          LineColor="var(--chart-2)" />
            </ChartPanelContent>
            <ChartPanelFooter>
                <div class="flex w-full items-start gap-2 text-sm">
                    <div class="grid gap-2">
                        <div class="flex items-center gap-2 font-medium leading-none">
                            Trending up by 5.2% this month <span class="ml-1">ðŸ“ˆ</span>
                        </div>
                        <div class="flex items-center gap-2 leading-none text-muted-foreground">
                            With subtle gradient area fill
                        </div>
                    </div>
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>

    <!-- Line Chart - Multiple -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Multiple</h3>
            <p class="text-sm text-muted-foreground">A line chart with multiple lines</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Line Chart - Multiple</ChartPanelTitle>
                <ChartPanelDescription>Showing total visitors for the last 6 months</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <MultiSeriesLineChart Data="@multipleData"
                                     XAxisDataKey="Month"
                                     Series="@multipleSeries"
                                     Height="300"
                                     />
            </ChartPanelContent>
            <ChartPanelFooter>
                <div class="flex w-full items-start gap-2 text-sm">
                    <div class="grid gap-2">
                        <div class="flex items-center gap-2 font-medium leading-none">
                            Trending up by 5.2% this month <span class="ml-1">ðŸ“ˆ</span>
                        </div>
                        <div class="flex items-center gap-2 leading-none text-muted-foreground">
                            January - June 2024
                        </div>
                    </div>
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>

    <!-- Line Chart - Dots -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Dots</h3>
            <p class="text-sm text-muted-foreground">A line chart with customized dots</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Line Chart - Dots</ChartPanelTitle>
                <ChartPanelDescription>January - June 2024</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <LineChart Data="@lineData" 
                          XAxisDataKey="Month"
                          YAxisDataKey="Desktop"
                          Label="Desktop"
                          Height="300"
                          Curved="true"
                          ShowDots="true"
                          LineColor="var(--chart-3)" />
            </ChartPanelContent>
            <ChartPanelFooter>
                <div class="flex gap-2 font-medium leading-none">
                    Trending up by 5.2% this month <span class="ml-1">ðŸ“ˆ</span>
                </div>
                <div class="leading-none text-muted-foreground">
                    Showing total visitors for the last 6 months
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>

    <!-- Line Chart - Label -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Label</h3>
            <p class="text-sm text-muted-foreground">A line chart with custom labels</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Line Chart - Custom Label</ChartPanelTitle>
                <ChartPanelDescription>January - June 2024</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <LineChart Data="@lineData" 
                          XAxisDataKey="Month"
                          YAxisDataKey="Desktop"
                          Label="Total Visitors"
                          Height="300"
                          Curved="true"
                          LineColor="var(--chart-4)" />
            </ChartPanelContent>
            <ChartPanelFooter>
                <div class="flex gap-2 font-medium leading-none">
                    Trending up by 5.2% this month <span class="ml-1">ðŸ“ˆ</span>
                </div>
                <div class="leading-none text-muted-foreground">
                    Showing total visitors for the last 6 months
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>
    
    <!-- Line Chart - Declarative ChartStyle (NEW) -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Declarative Style âœ¨ NEW</h3>
            <p class="text-sm text-muted-foreground">Using pure markup with ChartStyle child components - zero C# code required</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Declarative Styling Pattern</ChartPanelTitle>
                <ChartPanelDescription>Fully configured via markup (Pattern 6)</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <LineChart Data="@lineData" 
                          XAxisDataKey="Month"
                          YAxisDataKey="Desktop"
                          Label="Revenue"
                          Height="350">
                    <ChartStyle>
                        <LineStyle Color="var(--chart-1)" Width="2" Smooth="true" Type="LineType.Solid" />
                        <AreaStyle Show="true">
                            <LinearGradient Direction="GradientDirection.Vertical">
                                <ColorStop Offset="0.0" Color="var(--chart-1)" />
                                <ColorStop Offset="0.5" Color="var(--chart-1)" />
                                <ColorStop Offset="1.0" Color="var(--chart-1)" />
                            </LinearGradient>
                        </AreaStyle>
                        <PointStyle Symbol="PointSymbol.Circle" Size="4" Show="true" />
                    </ChartStyle>
                </LineChart>
            </ChartPanelContent>
            <ChartPanelFooter>
                <div class="flex w-full items-start gap-2 text-sm">
                    <div class="grid gap-2">
                        <div class="flex items-center gap-2 font-medium leading-none">
                            Blazor-native declarative markup âœ¨
                        </div>
                        <div class="flex items-center gap-2 leading-none text-muted-foreground">
                            Multi-stop gradient, smooth lines, customizable points - all in markup
                        </div>
                    </div>
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>
</div>

@code {
    private readonly List<LineData> lineData = new()
    {
        new() { Month = "January", Desktop = 186 },
        new() { Month = "February", Desktop = 305 },
        new() { Month = "March", Desktop = 237 },
        new() { Month = "April", Desktop = 73 },
        new() { Month = "May", Desktop = 209 },
        new() { Month = "June", Desktop = 214 }
    };

    private readonly List<MultipleLineData> multipleData = new()
    {
        new() { Month = "January", Desktop = 186, Mobile = 80 },
        new() { Month = "February", Desktop = 305, Mobile = 200 },
        new() { Month = "March", Desktop = 237, Mobile = 120 },
        new() { Month = "April", Desktop = 73, Mobile = 190 },
        new() { Month = "May", Desktop = 209, Mobile = 130 },
        new() { Month = "June", Desktop = 214, Mobile = 140 }
    };

    private readonly List<ChartSeriesConfig> multipleSeries = new()
    {
        new() { DataKey = "Desktop", Label = "Desktop", Color = "var(--chart-1)", Curved = true },
        new() { DataKey = "Mobile", Label = "Mobile", Color = "var(--chart-2)", Curved = true }
    };

    public class LineData
    {
        public string Month { get; set; } = string.Empty;
        public int Desktop { get; set; }
    }

    public class MultipleLineData
    {
        public string Month { get; set; } = string.Empty;
        public int Desktop { get; set; }
        public int Mobile { get; set; }
    }
}
