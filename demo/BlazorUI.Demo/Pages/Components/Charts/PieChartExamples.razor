@using BlazorUI.Components.Chart
@using BlazorUI.Components.Card

<div class="space-y-8">
    <!-- Pie Chart - Simple -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Pie Chart</h3>
            <p class="text-sm text-muted-foreground">A simple pie chart</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Browser Usage</CardTitle>
                <CardDescription>Market share distribution</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="300">
                    <PieChart Data="@pieData">
                        <Tooltip Mode="TooltipMode.Item" />
                        <Legend />
                        <Pie DataKey="value" NameKey="name" Name="Browsers" />
                    </PieChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>

    <!-- Pie Chart - Donut -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Donut Chart</h3>
            <p class="text-sm text-muted-foreground">Pie chart with inner radius (donut)</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Revenue by Category</CardTitle>
                <CardDescription>Q1 2024 breakdown</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="300">
                    <PieChart Data="@pieData">
                        <Tooltip Mode="TooltipMode.Item" />
                        <Legend />
                        <Pie DataKey="value" NameKey="name" Name="Categories" InnerRadius="60%" />
                    </PieChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>

    <!-- Pie Chart - Different Data -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Product Distribution</h3>
            <p class="text-sm text-muted-foreground">Sales by product category</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Product Categories</CardTitle>
                <CardDescription>Annual sales distribution</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="300">
                    <PieChart Data="@productData">
                        <Tooltip Mode="TooltipMode.Item" />
                        <Legend />
                        <Pie DataKey="value" NameKey="name" Name="Products" InnerRadius="50%" />
                    </PieChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>
</div>

@code {
    private record PieData(string name, int value);

    private List<PieData> pieData = new()
    {
        new("Chrome", 62),
        new("Safari", 20),
        new("Firefox", 10),
        new("Edge", 5),
        new("Other", 3)
    };

    private List<PieData> productData = new()
    {
        new("Electronics", 4500),
        new("Clothing", 3200),
        new("Books", 2100),
        new("Home & Garden", 1800),
        new("Sports", 1400)
    };
}
