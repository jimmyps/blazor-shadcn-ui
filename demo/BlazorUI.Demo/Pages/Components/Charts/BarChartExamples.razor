@using BlazorUI.Components.Chart
@using BlazorUI.Components.Card

<div class="space-y-8">
    <!-- Bar Chart - Vertical -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Bar Chart</h3>
            <p class="text-sm text-muted-foreground">A simple vertical bar chart</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Monthly Sales</CardTitle>
                <CardDescription>January - June 2024</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="300">
                    <BarChart Data="@simpleData" Layout="BarLayout.Vertical">
                        <XAxis DataKey="month" />
                        <YAxis />
                        <Tooltip Mode="TooltipMode.Axis" />
                        <Legend />
                        <Bar DataKey="sales" Name="Sales" />
                    </BarChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>

    <!-- Bar Chart - Horizontal -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Horizontal Bar</h3>
            <p class="text-sm text-muted-foreground">Horizontal bar chart layout</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Category Performance</CardTitle>
                <CardDescription>Comparison by category</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="300">
                    <BarChart Data="@simpleData" Layout="BarLayout.Horizontal">
                        <XAxis DataKey="month" />
                        <YAxis />
                        <Tooltip Mode="TooltipMode.Axis" />
                        <Legend />
                        <Bar DataKey="sales" Name="Sales" />
                    </BarChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>

    <!-- Bar Chart - Multiple Series -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Multiple Bars</h3>
            <p class="text-sm text-muted-foreground">Bar chart with multiple series</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Desktop vs Mobile</CardTitle>
                <CardDescription>Side-by-side comparison</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="300">
                    <BarChart Data="@multiData" Layout="BarLayout.Vertical">
                        <XAxis DataKey="month" />
                        <YAxis />
                        <Tooltip Mode="TooltipMode.Axis" />
                        <Legend />
                        <Bar DataKey="desktop" Name="Desktop" />
                        <Bar DataKey="mobile" Name="Mobile" />
                    </BarChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>

    <!-- Bar Chart - Stacked -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Stacked Bar</h3>
            <p class="text-sm text-muted-foreground">Stacked bar chart</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Total Traffic Sources</CardTitle>
                <CardDescription>Cumulative statistics</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="300">
                    <BarChart Data="@multiData" Layout="BarLayout.Vertical">
                        <XAxis DataKey="month" />
                        <YAxis />
                        <Tooltip Mode="TooltipMode.Axis" />
                        <Legend />
                        <Bar DataKey="desktop" Name="Desktop" StackId="total" />
                        <Bar DataKey="mobile" Name="Mobile" StackId="total" />
                    </BarChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>

    <!-- Bar Chart - With Radius -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Rounded Corners</h3>
            <p class="text-sm text-muted-foreground">Bar chart with border radius</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Modern Bar Chart</CardTitle>
                <CardDescription>With rounded corners</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="300">
                    <BarChart Data="@simpleData" Layout="BarLayout.Vertical">
                        <XAxis DataKey="month" />
                        <YAxis />
                        <Tooltip Mode="TooltipMode.Axis" />
                        <Legend />
                        <Bar DataKey="sales" Name="Sales" Radius="8" />
                    </BarChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>
</div>

@code {
    private record ChartData(string month, int sales, int desktop, int mobile);

    private List<ChartData> simpleData = new()
    {
        new("Jan", 186, 0, 0),
        new("Feb", 305, 0, 0),
        new("Mar", 237, 0, 0),
        new("Apr", 173, 0, 0),
        new("May", 209, 0, 0),
        new("Jun", 214, 0, 0)
    };

    private List<ChartData> multiData = new()
    {
        new("Jan", 0, 186, 80),
        new("Feb", 0, 305, 200),
        new("Mar", 0, 237, 120),
        new("Apr", 0, 173, 190),
        new("May", 0, 209, 130),
        new("Jun", 0, 214, 140)
    };
}
