@using BlazorUI.Components.Chart
@using BlazorUI.Components.Card

<div class="space-y-8">
    <!-- Bar Chart - Default -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Bar Chart</h3>
            <p class="text-sm text-muted-foreground">Showing total visitors for the last 6 months</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Bar Chart</ChartPanelTitle>
                <ChartPanelDescription>January - June 2024</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <BarChart Data="@barData" 
                         XAxisDataKey="Month"
                         YAxisDataKey="Desktop"
                         Label="Desktop"
                         Height="300"
                         ShowExportButton="true"
                         ExportFileName="bar-chart" />
            </ChartPanelContent>
            <ChartPanelFooter>
                <div class="flex gap-2 font-medium leading-none">
                    Trending up by 5.2% this month <span class="ml-1">ðŸ“ˆ</span>
                </div>
                <div class="leading-none text-muted-foreground">
                    Showing total visitors for the last 6 months
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>

    <!-- Bar Chart - Horizontal -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Horizontal</h3>
            <p class="text-sm text-muted-foreground">A horizontal bar chart</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Bar Chart - Horizontal</ChartPanelTitle>
                <ChartPanelDescription>January - June 2024</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <BarChart Data="@barData" 
                         XAxisDataKey="Month"
                         YAxisDataKey="Desktop"
                         Label="Desktop"
                         Height="300"
                         BarColor="var(--chart-2)" />
            </ChartPanelContent>
            <ChartPanelFooter>
                <div class="flex w-full items-start gap-2 text-sm">
                    <div class="grid gap-2">
                        <div class="flex items-center gap-2 font-medium leading-none">
                            Trending up by 5.2% this month <span class="ml-1">ðŸ“ˆ</span>
                        </div>
                        <div class="flex items-center gap-2 leading-none text-muted-foreground">
                            January - June 2024
                        </div>
                    </div>
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>

    <!-- Bar Chart - Multiple -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Multiple</h3>
            <p class="text-sm text-muted-foreground">A bar chart with multiple bars</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Bar Chart - Multiple</ChartPanelTitle>
                <ChartPanelDescription>January - June 2024</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <BarChart Data="@multipleData" 
                         XAxisDataKey="Month"
                         YAxisDataKey="Desktop"
                         Label="Desktop"
                         Height="300"
                         BarColor="var(--chart-1)" />
            </ChartPanelContent>
            <ChartPanelFooter>
                <div class="flex w-full items-start gap-2 text-sm">
                    <div class="grid gap-2">
                        <div class="flex items-center gap-2 font-medium leading-none">
                            Trending up by 5.2% this month <span class="ml-1">ðŸ“ˆ</span>
                        </div>
                        <div class="flex items-center gap-2 leading-none text-muted-foreground">
                            January - June 2024
                        </div>
                    </div>
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>

    <!-- Bar Chart - Label -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Label</h3>
            <p class="text-sm text-muted-foreground">A bar chart with custom labels</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Bar Chart - Custom Label</ChartPanelTitle>
                <ChartPanelDescription>January - June 2024</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <BarChart Data="@barData" 
                         XAxisDataKey="Month"
                         YAxisDataKey="Desktop"
                         Label="Total Visitors"
                         Height="300"
                         BarColor="var(--chart-3)" />
            </ChartPanelContent>
            <ChartPanelFooter>
                <div class="flex gap-2 font-medium leading-none">
                    Trending up by 5.2% this month <span class="ml-1">ðŸ“ˆ</span>
                </div>
                <div class="leading-none text-muted-foreground">
                    Showing total visitors for the last 6 months
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>

    <!-- Bar Chart - Mixed/Stacked -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Mixed</h3>
            <p class="text-sm text-muted-foreground">A bar chart showing different categories</p>
        </div>
        
        <ChartPanel>
            <ChartPanelHeader>
                <ChartPanelTitle>Bar Chart - Mixed</ChartPanelTitle>
                <ChartPanelDescription>Showing different metrics</ChartPanelDescription>
            </ChartPanelHeader>
            <ChartPanelContent>
                <BarChart Data="@mixedData" 
                         XAxisDataKey="Category"
                         YAxisDataKey="Value"
                         Label="Sales"
                         Height="300"
                         BarColor="var(--chart-4)" />
            </ChartPanelContent>
            <ChartPanelFooter>
                <div class="flex w-full items-start gap-2 text-sm">
                    <div class="grid gap-2">
                        <div class="flex items-center gap-2 leading-none text-muted-foreground">
                            Showing sales by category
                        </div>
                    </div>
                </div>
            </ChartPanelFooter>
        </ChartPanel>
    </div>
</div>

@code {
    private readonly List<BarData> barData = new()
    {
        new() { Month = "January", Desktop = 186 },
        new() { Month = "February", Desktop = 305 },
        new() { Month = "March", Desktop = 237 },
        new() { Month = "April", Desktop = 73 },
        new() { Month = "May", Desktop = 209 },
        new() { Month = "June", Desktop = 214 }
    };

    private readonly List<MultipleBarData> multipleData = new()
    {
        new() { Month = "January", Desktop = 186, Mobile = 80 },
        new() { Month = "February", Desktop = 305, Mobile = 200 },
        new() { Month = "March", Desktop = 237, Mobile = 120 },
        new() { Month = "April", Desktop = 73, Mobile = 190 },
        new() { Month = "May", Desktop = 209, Mobile = 130 },
        new() { Month = "June", Desktop = 214, Mobile = 140 }
    };

    private readonly List<MixedData> mixedData = new()
    {
        new() { Category = "Product A", Value = 275 },
        new() { Category = "Product B", Value = 200 },
        new() { Category = "Product C", Value = 187 },
        new() { Category = "Product D", Value = 173 },
        new() { Category = "Product E", Value = 90 }
    };

    public class BarData
    {
        public string Month { get; set; } = string.Empty;
        public int Desktop { get; set; }
    }

    public class MultipleBarData
    {
        public string Month { get; set; } = string.Empty;
        public int Desktop { get; set; }
        public int Mobile { get; set; }
    }

    public class MixedData
    {
        public string Category { get; set; } = string.Empty;
        public int Value { get; set; }
    }
}
