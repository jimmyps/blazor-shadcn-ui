@using BlazorUI.Components.Chart
@using BlazorUI.Components.Card

<div class="space-y-8">
    <!-- Area Chart - Simple -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Area Chart</h3>
            <p class="text-sm text-muted-foreground">A simple area chart</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Desktop vs Mobile Traffic</CardTitle>
                <CardDescription>April - June 2024</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="300">
                    <AreaChart Data="@simpleData">
                        <XAxis DataKey="date" />
                        <YAxis />
                        <Tooltip Mode="TooltipMode.Axis" />
                        <Legend />
                        <Area DataKey="desktop" Name="Desktop" />
                        <Area DataKey="mobile" Name="Mobile" />
                    </AreaChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>

    <!-- Area Chart - Stacked -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Stacked Area</h3>
            <p class="text-sm text-muted-foreground">Area chart with stacked series</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Desktop vs Mobile Traffic</CardTitle>
                <CardDescription>Cumulative visitor statistics</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="300">
                    <AreaChart Data="@stackedData">
                        <XAxis DataKey="month" />
                        <YAxis />
                        <Tooltip Mode="TooltipMode.Axis" />
                        <Legend />
                        <Area DataKey="desktop" Name="Desktop" StackId="total" />
                        <Area DataKey="mobile" Name="Mobile" StackId="total" />
                    </AreaChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>

    <!-- Area Chart - Multiple Series -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Multiple Areas</h3>
            <p class="text-sm text-muted-foreground">Area chart with independent series</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Multi-Platform Analytics</CardTitle>
                <CardDescription>Independent trend lines</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="300">
                    <AreaChart Data="@stackedData">
                        <XAxis DataKey="month" />
                        <YAxis />
                        <Tooltip Mode="TooltipMode.Axis" Cursor="TooltipCursor.Cross" />
                        <Legend />
                        <Area DataKey="desktop" Name="Desktop" />
                        <Area DataKey="mobile" Name="Mobile" />
                        <Area DataKey="tablet" Name="Tablet" />
                    </AreaChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>

    <!-- Area Chart - With Dots -->
    <div class="space-y-4">
        <div>
            <h3 class="text-lg font-semibold">Area with Data Points</h3>
            <p class="text-sm text-muted-foreground">Showing individual data points</p>
        </div>
        
        <Card>
            <CardHeader>
                <CardTitle>Revenue Trend</CardTitle>
                <CardDescription>Monthly revenue with markers</CardDescription>
            </CardHeader>
            <CardContent>
                <ChartContainer Height="300">
                    <AreaChart Data="@simpleData">
                        <XAxis DataKey="month" />
                        <YAxis />
                        <Tooltip Mode="TooltipMode.Axis" />
                        <Legend />
                        <Area DataKey="sales" Name="Sales" ShowDots="true" />
                    </AreaChart>
                </ChartContainer>
            </CardContent>
        </Card>
    </div>
</div>

