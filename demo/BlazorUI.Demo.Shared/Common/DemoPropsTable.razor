@* DemoPropsTable — renders an API reference table from a list of DemoPropRow records. *@

<div class="overflow-x-auto rounded-lg border">
    <table class="w-full text-sm">
        <thead>
            <tr class="border-b bg-muted/50">
                <th class="px-4 py-3 text-left font-semibold">Prop</th>
                <th class="px-4 py-3 text-left font-semibold">Type</th>
                <th class="px-4 py-3 text-left font-semibold">Default</th>
                <th class="px-4 py-3 text-left font-semibold">Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (row, index) in Rows.Select((r, i) => (r, i)))
            {
                <tr class="@(index % 2 == 1 ? "bg-muted/20" : "") border-b last:border-0">
                    <td class="px-4 py-3 font-mono text-xs font-medium">@row.Name</td>
                    <td class="px-4 py-3 font-mono text-xs text-blue-600 dark:text-blue-400">@row.Type</td>
                    <td class="px-4 py-3 font-mono text-xs text-muted-foreground">@(row.Default ?? "—")</td>
                    <td class="px-4 py-3 text-muted-foreground">@((MarkupString)row.Description)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    /// <summary>Prop rows to display. Each row represents one component parameter.</summary>
    [Parameter, EditorRequired] public IReadOnlyList<DemoPropRow> Rows { get; set; } = [];
}
