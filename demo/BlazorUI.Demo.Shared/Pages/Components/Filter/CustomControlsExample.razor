@page "/components/filter/custom"
@using BlazorUI.Components.Filter

<PageTitle>Filter Builder - Custom Controls - BlazorUI</PageTitle>

<div class="space-y-8 max-w-7xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Custom Controls Example</h1>
            <p class="text-xl text-muted-foreground">
                Use custom RenderFragment controls for specialized input scenarios like sliders, ratings, and more.
            </p>
        </div>
    </div>

    <div class="space-y-4">
        <h2 class="text-2xl font-semibold">Coming Soon</h2>
        <p class="text-muted-foreground">
            This example will demonstrate how to use custom controls with FilterField's CustomControl parameter.
        </p>
        <div class="bg-muted p-6 rounded-lg">
            <pre class="text-sm overflow-x-auto"><code>&lt;FilterField Field="Rating" 
             Label="Rating" 
             Type="FilterFieldType.Custom"&gt;
    &lt;CustomControl Context="condition"&gt;
        &lt;Rating @@bind-Value="condition.Value" /&gt;
    &lt;/CustomControl&gt;
&lt;/FilterField&gt;</code></pre>
        </div>
    </div>
</div>
