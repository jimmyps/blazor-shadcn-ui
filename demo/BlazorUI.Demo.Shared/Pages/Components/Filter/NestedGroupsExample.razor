@page "/components/filter/nested"
@using BlazorUI.Components.Filter

<PageTitle>Filter Builder - Nested Groups - BlazorUI</PageTitle>

<div class="space-y-8 max-w-7xl">
    <div>
        <div class="space-y-3">
            <h1 class="text-4xl font-bold tracking-tight">Nested Groups Example</h1>
            <p class="text-xl text-muted-foreground">
                Build complex filter logic with nested condition groups using AND/OR operators.
            </p>
        </div>
    </div>

    <div class="space-y-4">
        <h2 class="text-2xl font-semibold">Coming Soon</h2>
        <p class="text-muted-foreground">
            This example will demonstrate how to create nested filter groups for complex filtering scenarios.
        </p>
        <div class="bg-muted p-6 rounded-lg">
            <pre class="text-sm overflow-x-auto"><code>// Example: (Status = "Pending" OR Status = "Processing") AND Amount > 1000
var filters = new FilterGroup
{
    Logic = LogicalOperator.And,
    NestedGroups = new List&lt;FilterGroup&gt;
    {
        new FilterGroup
        {
            Logic = LogicalOperator.Or,
            Conditions = new List&lt;FilterCondition&gt;
            {
                new FilterCondition { Field = "Status", Operator = FilterOperator.Equals, Value = "Pending" },
                new FilterCondition { Field = "Status", Operator = FilterOperator.Equals, Value = "Processing" }
            }
        }
    },
    Conditions = new List&lt;FilterCondition&gt;
    {
        new FilterCondition { Field = "Amount", Operator = FilterOperator.GreaterThan, Value = 1000 }
    }
};</code></pre>
        </div>
    </div>
</div>
