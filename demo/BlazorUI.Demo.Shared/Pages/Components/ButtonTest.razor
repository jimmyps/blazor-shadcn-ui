@page "/components/button-test"

<PageTitle>Button Test</PageTitle>

<div class="p-8 space-y-4">
    <h1 class="text-2xl font-bold mb-4">Button Component Test</h1>

    <div class="space-y-2">
        <h2 class="text-lg font-semibold">Basic Buttons</h2>
        <div class="flex gap-4">
            <Button>Default Button</Button>
            <Button Variant="ButtonVariant.Destructive">Destructive</Button>
            <Button Variant="ButtonVariant.Outline">Outline</Button>
            <Button Variant="ButtonVariant.Secondary">Secondary</Button>
            <Button Variant="ButtonVariant.Ghost">Ghost</Button>
            <Button Variant="ButtonVariant.Link">Link</Button>
        </div>
    </div>

    <div class="space-y-2">
        <h2 class="text-lg font-semibold">Sizes</h2>
        <div class="flex gap-4 items-center">
            <Button Size="ButtonSize.Small">Small</Button>
            <Button Size="ButtonSize.Default">Default</Button>
            <Button Size="ButtonSize.Large">Large</Button>
        </div>
    </div>

    <div class="space-y-2">
        <h2 class="text-lg font-semibold">Disabled State</h2>
        <div class="flex gap-4">
            <Button Disabled="true">Disabled Default</Button>
            <Button Variant="ButtonVariant.Outline" Disabled="true">Disabled Outline</Button>
        </div>
    </div>

    <div class="space-y-2">
        <h2 class="text-lg font-semibold">With Click Handler</h2>
        <div class="flex gap-4 items-center">
            <Button OnClick="HandleClick">Click Me</Button>
            <span>@clickMessage</span>
        </div>
    </div>
</div>

@code {
    private string clickMessage = "";

    private Task HandleClick(MouseEventArgs e)
    {
        clickMessage = $"Button clicked at {DateTime.Now:HH:mm:ss}";
        return Task.CompletedTask;
    }
}
